<UserControl x:Class="Pet_Shop_Project.Controls.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Width="200" Height="280"
             MouseLeftButtonUp="ProductCard_Click"
             Cursor="Hand"
             Margin="10">

    <!-- Outer Shadow -->
    <Border x:Name="OuterBorder"
            CornerRadius="12"
            Background="Transparent">
        <Border.Effect>
            <DropShadowEffect x:Name="CardShadow"
                              ShadowDepth="0"
                              BlurRadius="10"
                              Opacity="0.15"
                              Color="Black"/>
        </Border.Effect>

        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="BlurRadius"
                                       To="20"
                                       Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="Opacity"
                                       To="0.25"
                                       Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="BlurRadius"
                                       To="10"
                                       Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="Opacity"
                                       To="0.15"
                                       Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <!-- Card Background with Clipping -->
        <Border Background="White"
                CornerRadius="12"
                ClipToBounds="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- PRODUCT IMAGE: Rounded Top Corners Only -->
                <Grid Grid.Row="0" ClipToBounds="True">
                    <Rectangle RadiusX="12" RadiusY="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="{Binding ElementName=ProductImage, Path=Source}"
                                        Stretch="UniformToFill"/>
                        </Rectangle.Fill>
                    </Rectangle>

                    <!-- DISCOUNT BADGE: Góc trên bên phải (27x12) -->
                    <Grid x:Name="DiscountBadge"
                          Width="40"
                          Height="16"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Margin="0,8,8,0"
                          Visibility="Collapsed">

                        <!-- Arrow shape path -->
                        <Path Fill="#FF8284"
                              Data="M 8,0 L 40,0 L 40,16 L 8,16 L 0,8 Z"
                              Stretch="Fill"/>

                        <!-- Text overlay -->
                        <TextBlock x:Name="DiscountText"
                                   Text="-15%"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </Grid>
                </Grid>

                <!-- PRODUCT INFO -->
                <StackPanel Grid.Row="1" Margin="15,10,15,15">
                    <TextBlock x:Name="ProductName"
                               Text="Tên sản phẩm"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               TextTrimming="CharacterEllipsis"
                               MaxHeight="40"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,10">
                                <StackPanel x:Name="StarPanel" 
                                           Orientation="Horizontal"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,0"/>
                                <TextBlock x:Name="RatingText"
                                          Text="5/5"
                                          FontSize="12"
                                          Foreground="#FFA500"
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                    <!-- PRICE SECTION -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Giá sau giảm (hoặc giá thường) -->
                        <TextBlock x:Name="ProductPrice"
                                   Text="75.000 đ"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#FF6B6B"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <!-- Giá gốc gạch ngang (chỉ hiện khi có discount) -->
                        <TextBlock x:Name="OriginalPrice"
                                   Text="90.000 đ"
                                   FontSize="13"
                                   FontWeight="Light"
                                   Foreground="#767676"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Strikethrough">
                                    <TextDecoration.Pen>
                                        <Pen Brush="#767676" Thickness="1"/>
                                    </TextDecoration.Pen>
                                </TextDecoration>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Hidden Image as ImageBrush Source -->
                <Image x:Name="ProductImage"
                       Visibility="Collapsed"/>
            </Grid>

        </Border>
    </Border>
</UserControl>