<UserControl x:Class="Pet_Shop_Project.Controls.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Width="200" Height="280"
             MouseLeftButtonUp="ProductCard_Click"
             Cursor="Hand"
             Margin="10">

    <!-- Outer Shadow -->
    <Border x:Name="OuterBorder"
            CornerRadius="12"
            Background="Transparent">
        <Border.Effect>
            <DropShadowEffect x:Name="CardShadow"
                              ShadowDepth="0"
                              BlurRadius="10"
                              Opacity="0.15"
                              Color="Black"/>
        </Border.Effect>

        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="BlurRadius"
                                       To="20"
                                       Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="Opacity"
                                       To="0.25"
                                       Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="BlurRadius"
                                       To="10"
                                       Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="CardShadow"
                                       Storyboard.TargetProperty="Opacity"
                                       To="0.15"
                                       Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <!-- Card Background with Clipping -->
        <Border Background="White"
                CornerRadius="12"
                ClipToBounds="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- PRODUCT IMAGE: Rounded Top Corners Only -->
                <Grid Grid.Row="0" ClipToBounds="True">
                    <Rectangle RadiusX="12" RadiusY="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="{Binding ElementName=ProductImage, Path=Source}"
                                        Stretch="UniformToFill"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>

                <!-- PRODUCT INFO -->
                <StackPanel Grid.Row="1" Margin="15,10,15,15">
                    <TextBlock x:Name="ProductName"
                               Text="Tên sản phẩm"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               TextTrimming="CharacterEllipsis"
                               MaxHeight="40"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <StackPanel x:Name="StarPanel" Orientation="Horizontal"/>
                        <TextBlock x:Name="RatingText"
                                   Text="5/5"
                                   FontSize="12"
                                   Foreground="#FFA500"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock x:Name="ProductPrice"
                               Text="75.000 đ"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#FF6B6B"/>
                </StackPanel>

                <!-- Hidden Image as ImageBrush Source -->
                <Image x:Name="ProductImage"
                       Visibility="Collapsed"/>
            </Grid>

        </Border>
    </Border>
</UserControl>