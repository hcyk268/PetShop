<UserControl x:Class="Pet_Shop_Project.Controls.AdminNavigationBar"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
            mc:Ignorable="d" 
            Width="60" 
            VerticalAlignment="Stretch">

    <Border Background="#FFCC96" 
            BorderBrush="{DynamicResource MaterialDesignDivider}" 
            BorderThickness="0,0,1,0">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" 
                              BlurRadius="8" 
                              Opacity="0.1" 
                              Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation Buttons -->
            <StackPanel Grid.Row="0">
                <!-- Dashboard Button -->
                <Button x:Name="DashboardButton" 
                        Style="{StaticResource NavButtonStyle}" 
                        Click="DashboardButton_Click" 
                        ToolTip="Trang chủ Admin" 
                        Tag="Dashboard">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ViewDashboard" 
                                                 Width="30" 
                                                 Height="30"/>
                    </StackPanel>
                </Button>

                <!-- Inventory Management Button -->
                <Button x:Name="ProductButton" 
                        Style="{StaticResource NavButtonStyle}" 
                        ToolTip="Quản lý kho hàng" 
                        Click="InventoryButton_Click" 
                        Tag="Product">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="PackageVariant" 
                                                 Width="30" 
                                                 Height="30"/>
                    </StackPanel>
                </Button>

                <!-- User Management Button -->
                <Button x:Name="UserButton" 
                        Style="{StaticResource NavButtonStyle}" 
                        ToolTip="Quản lý người dùng" 
                        Click="UserButton_Click" 
                        Tag="User">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AccountGroup" 
                                                 Width="30" 
                                                 Height="30"/>
                    </StackPanel>
                </Button>

                <!-- Shipping Management Button -->
                <Button x:Name="ShippingButton" 
                        Style="{StaticResource NavButtonStyle}" 
                        ToolTip="Quản lý vận chuyển" 
                        Click="ShippingButton_Click" 
                        Tag="Shipping">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="TruckDelivery" 
                                                 Width="30" 
                                                 Height="30"/>
                    </StackPanel>
                </Button>

                <!-- Review Management Button -->
                <Button x:Name="ReviewButton" 
                        Style="{StaticResource NavButtonStyle}" 
                        ToolTip="Quản lý đánh giá" 
                        Click="ReviewButton_Click" 
                        Tag="Review">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="StarOutline" 
                                                 Width="30" 
                                                 Height="30"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Spacer -->
            <Border Grid.Row="1"/>

            <!-- Bottom Logout Button -->
            <StackPanel Grid.Row="2">
                <!-- Logout Button -->
                <Button x:Name="LogoutButton" 
                        Style="{StaticResource NavButtonStyle}" 
                        ToolTip="Đăng xuất" 
                        Tag="Logout" 
                        Click="LogoutButton_Click">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Logout" 
                                                 Width="30" 
                                                 Height="30"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>