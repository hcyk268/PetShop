<Window x:Class="Pet_Shop_Project.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pet_Shop_Project"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:Pet_Shop_Project.Controls" 
        mc:Ignorable="d" 
        Title="Pet Shop - Admin Panel" 
        Height="650" Width="1000" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Admin Navigation Bar (có thể tạo riêng hoặc dùng chung) -->
        <controls:AdminNavigationBar Grid.Column="0" Margin="0,0,0,0"/>

        <!-- Admin Content Frame -->
        <Frame Grid.Column="1" 
               x:Name="AdminScreen" 
               NavigationUIVisibility="Hidden"
               Source="/views/AdminReviewPage.xaml">
        </Frame>
    </Grid>
</Window>