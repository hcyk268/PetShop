<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Converter for stock status color -->
    <Style x:Key="StockNumberStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsNegative}" Value="True">
                <Setter Property="Foreground" Value="#C62828"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsNegative}" Value="False">
                <Setter Property="Foreground" Value="#333"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!--PlaceHolderTextBoxStyle-->
    <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                        <Grid>
                            <TextBlock Text="{TemplateBinding Tag}"
                                               Foreground="#999999"
                                               Margin="10,8,0,0"
                                               IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <ScrollViewer x:Name="PART_ContentHost"
                                                  Padding="{TemplateBinding Padding}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--QueuePage-->
    <Style x:Key="HeaderOderQueuePage" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TextHeaderOderQueuePage" TargetType="TextBlock">
        <Setter Property="Margin" Value="30,30,0,0"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#222"/>
    </Style>
    
    <SolidColorBrush x:Key="QP.TextBrush" Color="#222" />
    <SolidColorBrush x:Key="QP.TextHoverBrush" Color="#111" />
    <SolidColorBrush x:Key="QP.TextDisabledBrush" Color="#9E9E9E" />
    <SolidColorBrush x:Key="QP.BgHoverBrush" Color="#11000000"/>
    <SolidColorBrush x:Key="QP.BgPressedBrush" Color="#22000000"/>
    <SolidColorBrush x:Key="QP.AccentBrush" Color="#ffa2a2" />
    <SolidColorBrush x:Key="QP.UnderlineIdle" Color="#00000000"/>

    <Style x:Key="ButtonQueuePageNavigation" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource QP.TextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid ClipToBounds="True">
                        <!-- Nền hover/pressed -->
                        <Border x:Name="Bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"/>

                        <!-- Nội dung -->
                        <ContentPresenter
                            Margin="8,6,8,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>

                        <!-- Gạch chân -->
                        <Border x:Name="Underline"
                            Height="2"
                            VerticalAlignment="Bottom"
                            CornerRadius="2"
                            Background="{StaticResource QP.UnderlineIdle}"
                            Margin="10,0,10,0"/>
                    </Grid>

                    <!-- Trạng thái -->
                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource QP.BgHoverBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource QP.TextHoverBrush}"/>
                            
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource QP.BgPressedBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource QP.AccentBrush}"/>
                        </Trigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource QP.TextDisabledBrush}"/>
                        </Trigger>

                        <!--Active-->
                        <Trigger Property="Tag" Value="Active">
                            <Setter TargetName="Underline" Property="Background" Value="{StaticResource QP.AccentBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource QP.AccentBrush}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--DataTemplate-->
    <Style x:Key="TemplateODQ" TargetType="Border">
        <Setter Property="BorderBrush" Value="#FFA2A2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0 0 30 15"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFE5E5" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <!--QueuePage-->

</ResourceDictionary>