<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--QueuePage-->
    <Style x:Key="HeaderOderQueuePage" TargetType="Grid">
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style x:Key="TextHeaderOderQueuePage" TargetType="TextBlock">
        <Setter Property="Margin" Value="30,30,0,0"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <SolidColorBrush x:Key="QP.TextBrush" Color="#222" />
    <SolidColorBrush x:Key="QP.TextHoverBrush" Color="#111" />
    <SolidColorBrush x:Key="QP.TextDisabledBrush" Color="#9E9E9E" />
    <SolidColorBrush x:Key="QP.BgHoverBrush" Color="#11000000"/>
    <SolidColorBrush x:Key="QP.BgPressedBrush" Color="#22000000"/>
    <SolidColorBrush x:Key="QP.AccentBrush" Color="#ffa2a2" />
    <SolidColorBrush x:Key="QP.UnderlineIdle" Color="#00000000"/>

    <Style x:Key="ButtonQueuePageNavigation" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource QP.TextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid ClipToBounds="True">
                        <!-- Nền hover/pressed -->
                        <Border x:Name="Bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"/>

                        <!-- Nội dung -->
                        <ContentPresenter
                            Margin="8,6,8,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>

                        <!-- Gạch chân -->
                        <Border x:Name="Underline"
                            Height="2"
                            VerticalAlignment="Bottom"
                            CornerRadius="2"
                            Background="{StaticResource QP.UnderlineIdle}"
                            Margin="10,0,10,0"/>
                    </Grid>

                    <!-- Trạng thái -->
                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource QP.BgHoverBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource QP.TextHoverBrush}"/>
                            
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource QP.BgPressedBrush}"/>
                            <Setter TargetName="Underline" Property="Background" Value="{StaticResource QP.AccentBrush}"/>
                            <Setter TargetName="Underline" Property="Height" Value="4"/>
                            <Setter Property="Foreground" Value="{StaticResource QP.AccentBrush}"/>
                        </Trigger>

                        <!-- Focus (bằng bàn phím) -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Underline" Property="Background" Value="{StaticResource QP.AccentBrush}"/>
                        </Trigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource QP.TextDisabledBrush}"/>
                        </Trigger>

                        <!--Active-->
                        <Trigger Property="Tag" Value="Active">
                            <Setter TargetName="Underline" Property="Background" Value="{StaticResource QP.AccentBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource QP.AccentBrush}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--QueuePage-->

</ResourceDictionary>