<Page x:Class="Pet_Shop_Project.Views.AdminOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650"
      d:DesignWidth="940"
      Background="#FFF7F5"
      Title="AdminOrder">

    <Grid Margin="0,0,0,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="0"
                Padding="18"
                Background="#F5F5F5"
                materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="2,0,0,8">
                    <StackPanel Margin="12,2,0,0">
                        <TextBlock Text="Quản Lý Đơn Hàng"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#FFAD57"/>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="createOrderButton"
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="35"
                        Style="{StaticResource FakeReviewButtonStyle}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="CreateOrderButton_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Plus" 
                                                 Width="26" Height="26"
                                                 Margin="4,0,0,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Tạo Đơn Hàng"
                                   Margin="4,0,8,0"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <UniformGrid Grid.Row="1" Grid.ColumnSpan="2" Columns="4" Margin="0,4,0,0">

                    <Button x:Name="pendingbtn"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="pendingbtn_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ClockOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đang Chờ Duyệt"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="shippingbtn"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="shippingbtn_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Truck"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đang Giao Hàng"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="shippedbtn"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="shippedbtn_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CheckCircleOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đã Nhận Hàng"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="rejectedbtn"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="rejectedbtn_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CloseCircleOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đã Hủy Bỏ"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="12,16,12,0"
                Background="White"
                CornerRadius="12"
                Padding="4"
                BorderBrush="#FFEDEDED"
                BorderThickness="1"
                materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Grid>
                <TextBlock x:Name="loadingIndicatorAdmin"
                           Text="Đang tải..."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                <Frame x:Name="AdminOrderScreen"
                       Background="Transparent"
                       Visibility="Collapsed">
                </Frame>
            </Grid>
        </Border>
    </Grid>
</Page>
