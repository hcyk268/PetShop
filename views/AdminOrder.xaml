<Page x:Class="Pet_Shop_Project.Views.AdminOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="940"
      Background="White"
      Title="AdminOrder">

    <Grid Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>


        <Grid x:Name="Header" 
            Grid.Row="0"
            Margin="0,0,0,0"
            Style="{StaticResource HeaderOderQueuePage}">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                   Style="{StaticResource TextHeaderOderQueuePage}" >
        Trạng Thái Các Đơn Hàng
            </TextBlock>

            <Grid Grid.Row="1" Margin="10,5,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="pendingbtn" Grid.Column="0"
                Margin="10,5,10,0"
                Content="Đang Đợi Duyệt"
                Style="{StaticResource ButtonQueuePageNavigation}" Click="pendingbtn_Click"/>
                <Button x:Name="shippingbtn" Grid.Column="1"
                Margin="10,5,10,0"
                Content="Đang Giao Hàng"
                Style="{StaticResource ButtonQueuePageNavigation}" Click="shippingbtn_Click"/>
                <Button x:Name="shippedbtn" Grid.Column="2"
                Margin="10,5,10,0"
                Content="Đã Nhận Hàng"
                Style="{StaticResource ButtonQueuePageNavigation}" Click="shippedbtn_Click"/>
                <Button x:Name="rejectedbtn" Grid.Column="3"
                Margin="10,5,10,0"
                Content="Đã Hủy Bỏ"
                Style="{StaticResource ButtonQueuePageNavigation}" Click="rejectedbtn_Click"/>
            </Grid>
        </Grid>

        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="#FFAFABAB">
            <Frame x:Name="AdminOrderPage">
            </Frame>
        </Border>
    </Grid>
</Page>
