<Page x:Class="Pet_Shop_Project.Views.Payment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="940"
      Title="Thanh toán">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header - Background F5F5F5 (Same as CartPage) -->
        <Grid Grid.Row="0" Background="#F5F5F5" Height="60">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="30,0,0,0">

                <!-- Back Button -->
                <Button x:Name="BackButton"
                        Width="35" Height="35"
                        BorderThickness="0"
                        Background="White"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Margin="0,0,15,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Width="35" Height="35"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="18">
                                <materialDesign:PackIcon x:Name="icon"
                                                         Kind="ArrowLeft"
                                                         Width="22" Height="22"
                                                         Foreground="#FFAD57"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFECECEC"/>
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FFAD56" Offset="0"/>
                                                <GradientStop Color="#FFC281" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Title -->
                <TextBlock Text="Thanh toán"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#FFAD57"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content - Background F8FFFE (Same as CartPage) -->
        <Grid Grid.Row="1" Background="#F8FFFE">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Padding="30,20,30,20">
                <StackPanel MaxWidth="880">

                    <!-- Delivery Address Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,15,0,15">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.15" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="MapMarker" 
                                                         Width="24" Height="24"
                                                         Foreground="#FFAD57"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="Địa chỉ nhận hàng" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="#333333"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Full Name -->
                            <TextBlock Text="Họ và tên"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="CustomerNameTextBox"
                                     md:HintAssist.Hint="Nhập họ và tên"
                                     md:HintAssist.Foreground="#999999"
                                     Height="40"
                                     Padding="12,10"
                                     BorderBrush="#DDDDDD"
                                     BorderThickness="1"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <!-- Phone Number -->
                            <TextBlock Text="Số điện thoại"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="CustomerPhoneTextBox"
                                     md:HintAssist.Hint="Nhập số điện thoại"
                                     md:HintAssist.Foreground="#999999"
                                     Height="40"
                                     Padding="12,10"
                                     BorderBrush="#DDDDDD"
                                     BorderThickness="1"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <!-- Province/City Dropdown -->
                            <TextBlock Text="Tỉnh/Thành phố"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="ProvinceComboBox"
                                      md:HintAssist.Hint="Chọn Tỉnh/Thành phố"
                                      md:HintAssist.Foreground="#999999"
                                      Height="40"
                                      Padding="12,10"
                                      BorderBrush="#DDDDDD"
                                      BorderThickness="1"
                                      FontSize="14"
                                      Margin="0,0,0,15">
                                <ComboBoxItem Content="Hà Nội"/>
                                <ComboBoxItem Content="TP. Hồ Chí Minh"/>
                                <ComboBoxItem Content="Đà Nẵng"/>
                                <ComboBoxItem Content="Hải Phòng"/>
                                <ComboBoxItem Content="Cần Thơ"/>
                                <ComboBoxItem Content="An Giang"/>
                                <ComboBoxItem Content="Bà Rịa - Vũng Tàu"/>
                                <ComboBoxItem Content="Bắc Giang"/>
                                <ComboBoxItem Content="Bắc Kạn"/>
                                <ComboBoxItem Content="Bạc Liêu"/>
                                <ComboBoxItem Content="Bắc Ninh"/>
                                <ComboBoxItem Content="Bến Tre"/>
                                <ComboBoxItem Content="Bình Định"/>
                                <ComboBoxItem Content="Bình Dương"/>
                                <ComboBoxItem Content="Bình Phước"/>
                                <ComboBoxItem Content="Bình Thuận"/>
                                <ComboBoxItem Content="Cà Mau"/>
                                <ComboBoxItem Content="Cao Bằng"/>
                                <ComboBoxItem Content="Đắk Lắk"/>
                                <ComboBoxItem Content="Đắk Nông"/>
                                <ComboBoxItem Content="Điện Biên"/>
                                <ComboBoxItem Content="Đồng Nai"/>
                                <ComboBoxItem Content="Đồng Tháp"/>
                                <ComboBoxItem Content="Gia Lai"/>
                                <ComboBoxItem Content="Hà Giang"/>
                                <ComboBoxItem Content="Hà Nam"/>
                                <ComboBoxItem Content="Hà Tĩnh"/>
                                <ComboBoxItem Content="Hải Dương"/>
                                <ComboBoxItem Content="Hậu Giang"/>
                                <ComboBoxItem Content="Hòa Bình"/>
                                <ComboBoxItem Content="Hưng Yên"/>
                                <ComboBoxItem Content="Khánh Hòa"/>
                                <ComboBoxItem Content="Kiên Giang"/>
                                <ComboBoxItem Content="Kon Tum"/>
                                <ComboBoxItem Content="Lai Châu"/>
                                <ComboBoxItem Content="Lâm Đồng"/>
                                <ComboBoxItem Content="Lạng Sơn"/>
                                <ComboBoxItem Content="Lào Cai"/>
                                <ComboBoxItem Content="Long An"/>
                                <ComboBoxItem Content="Nam Định"/>
                                <ComboBoxItem Content="Nghệ An"/>
                                <ComboBoxItem Content="Ninh Bình"/>
                                <ComboBoxItem Content="Ninh Thuận"/>
                                <ComboBoxItem Content="Phú Thọ"/>
                                <ComboBoxItem Content="Phú Yên"/>
                                <ComboBoxItem Content="Quảng Bình"/>
                                <ComboBoxItem Content="Quảng Nam"/>
                                <ComboBoxItem Content="Quảng Ngãi"/>
                                <ComboBoxItem Content="Quảng Ninh"/>
                                <ComboBoxItem Content="Quảng Trị"/>
                                <ComboBoxItem Content="Sóc Trăng"/>
                                <ComboBoxItem Content="Sơn La"/>
                                <ComboBoxItem Content="Tây Ninh"/>
                                <ComboBoxItem Content="Thái Bình"/>
                                <ComboBoxItem Content="Thái Nguyên"/>
                                <ComboBoxItem Content="Thanh Hóa"/>
                                <ComboBoxItem Content="Thừa Thiên Huế"/>
                                <ComboBoxItem Content="Tiền Giang"/>
                                <ComboBoxItem Content="Trà Vinh"/>
                                <ComboBoxItem Content="Tuyên Quang"/>
                                <ComboBoxItem Content="Vĩnh Long"/>
                                <ComboBoxItem Content="Vĩnh Phúc"/>
                                <ComboBoxItem Content="Yên Bái"/>
                            </ComboBox>

                            <!-- Detailed Address -->
                            <TextBlock Text="Địa chỉ cụ thể"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="DetailedAddressTextBox"
                                     md:HintAssist.Hint="Số nhà, tên đường, phường/xã, quận/huyện"
                                     md:HintAssist.Foreground="#999999"
                                     Height="40"
                                     Padding="12,10"
                                     BorderBrush="#DDDDDD"
                                     BorderThickness="1"
                                     FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- Product Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.15" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Sản phẩm" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <!-- Product Item -->
                            <ItemsControl x:Name="ProductItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F0F0F0"
                                                BorderThickness="0,0,0,1"
                                                Padding="0,10"
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Product Image -->
                                                <Border Grid.Column="0"
                                                        Width="70" Height="70"
                                                        CornerRadius="8"
                                                        Background="#F5F5F5"
                                                        Margin="0,0,15,0"
                                                        ClipToBounds="True">
                                                    <Image Source="{Binding ImageUrl}" 
                                                           Stretch="UniformToFill"/>
                                                </Border>

                                                <!-- Product Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="15" 
                                                               FontWeight="Medium"
                                                               Foreground="#333333"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Variant}" 
                                                               FontSize="13"
                                                               Foreground="#888888"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock FontSize="13" Foreground="#666666">
                                                        <Run Text="Số lượng: x"/>
                                                        <Run Text="{Binding Quantity}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Price -->
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Price, StringFormat={}{0:N0}đ}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#ff6b6b"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Total Products and Amount -->
                            <Border Background="#F8F8F8"
                                    CornerRadius="8"
                                    Padding="15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="TotalItemsText"
                                               Text="0 sản phẩm" 
                                               FontSize="14"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="Thành tiền" 
                                                   FontSize="13"
                                                   Foreground="#666666"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock x:Name="SubtotalText"
                                                   Text="0đ" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#333333"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Shipping Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.15" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Đơn vị vận chuyển" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <!-- Viettel Post (Selected) -->
                            <RadioButton x:Name="ViettelPostOption"
                                         Style="{StaticResource ShippingOptionStyle}"
                                         IsChecked="True"
                                         GroupName="Shipping"
                                         Checked="ShippingOptionChanged">
                                <RadioButton.Content>
                                    <StackPanel>
                                        <TextBlock Text="Viettel Post" 
                                                   FontSize="15" 
                                                   FontWeight="Medium"
                                                   Foreground="#333333"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Giao hàng: 3-4 ngày" 
                                                   FontSize="13"
                                                   Foreground="#666666"/>
                                    </StackPanel>
                                </RadioButton.Content>
                                <RadioButton.Tag>
                                    <StackPanel HorizontalAlignment="Right">
                                        <TextBlock Text="8.000đ" 
                                                   FontSize="12"
                                                   Foreground="#999999"
                                                   TextDecorations="Strikethrough"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock Text="0đ" 
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="#4CAF50"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </RadioButton.Tag>
                            </RadioButton>

                            <!-- Fast Shipping -->
                            <RadioButton x:Name="FastShippingOption"
                                         Style="{StaticResource ShippingOptionStyle}"
                                         GroupName="Shipping"
                                         Checked="ShippingOptionChanged">
                                <RadioButton.Content>
                                    <StackPanel>
                                        <TextBlock Text="Giao hàng nhanh" 
                                                   FontSize="15" 
                                                   FontWeight="Medium"
                                                   Foreground="#333333"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Giao hàng: 1-2 ngày" 
                                                   FontSize="13"
                                                   Foreground="#666666"/>
                                    </StackPanel>
                                </RadioButton.Content>
                                <RadioButton.Tag>
                                    <TextBlock Text="20.000đ" 
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="#333333"/>
                                </RadioButton.Tag>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                    <!-- Note for Seller -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.15" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Lưu ý cho người bán" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,10"/>
                            <TextBox x:Name="SellerNoteTextBox"
                                     md:HintAssist.Hint="Lưu ý đến người bán"
                                     md:HintAssist.Foreground="#999999"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MaxLength="500"
                                     Height="80"
                                     VerticalContentAlignment="Top"
                                     Padding="10"
                                     BorderBrush="#DDDDDD"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Border>

                    <!-- Payment Method Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.15" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Phương thức thanh toán" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,10"/>
                            <TextBlock x:Name="CODPaymentOption"
                                       Text="Thanh toán khi nhận hàng (COD)" 
                                       FontSize="15" 
                                       FontWeight="Normal"
                                       Foreground="#333333"/>
                        </StackPanel>
                    </Border>

                    <!-- Order Summary -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.15" Color="Black"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Chi tiết thanh toán" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <!-- Subtotal -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Tạm tính" 
                                           FontSize="14"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="SummarySubtotalText"
                                           Text="0đ" 
                                           FontSize="14"
                                           Foreground="#333333"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Shipping Fee -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Phí vận chuyển" 
                                           FontSize="14"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="ShippingFeeText"
                                           Text="0đ"
                                           FontSize="14"
                                           Foreground="#4CAF50"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Divider -->
                            <Border BorderBrush="#E0E0E0"
                                    BorderThickness="0,1,0,0"
                                    Margin="0,5,0,15"/>

                            <!-- Total -->
                            <Grid>
                                <TextBlock Text="Tổng cộng" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#333333"/>
                                <TextBlock x:Name="TotalAmountText"
                                           Text="0đ"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#FF6B6B"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Place Order Button -->
                    <Button x:Name="PlaceOrderButton"
                            Content="ĐẶT HÀNG"
                            Style="{StaticResource GradientButtonStyle}"
                            Height="50"
                            FontSize="16"
                            Margin="0,0,0,20"
                            Click="PlaceOrder_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>