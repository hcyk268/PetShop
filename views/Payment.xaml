<Page x:Class="Pet_Shop_Project.Views.Payment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="940"
      Title="Thanh toán">

    <Grid Background="#F8F8F8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="40,30,40,30" MaxWidth="900">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Back Button -->
                <Grid Grid.Row="0" Margin="-10,0,0,25">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="69">
                        <Button Style="{StaticResource RoundButtonStyle}" 
                            ToolTip="Trở về"
                            Click="BackButton_Click" 
                            Height="50" 
                            Width="50"
                            Margin="10,0,0,0">
                            <materialDesign:PackIcon x:Name="BackButton" 
                             Kind="ArrowLeft" 
                             Width="30" 
                             Height="30"/>
                        </Button>
                    </StackPanel>

                    <TextBlock Text="Thanh toán" 
                               FontSize="40" 
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Main Content -->
                <StackPanel Grid.Row="1">

                    <!-- Delivery Address Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Viewbox Width="20" Height="20" Margin="0,0,8,0">
                                        <Canvas Width="24" Height="24">
                                            <materialDesign:PackIcon x:Name="LocationIcon" 
                                                                     Kind="MapMarker" 
                                                                     Width="30" 
                                                                     Height="30"
                                                                     Foreground="{StaticResource QP.AccentBrush}" Canvas.Left="0" VerticalAlignment="Center"/>
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock Text="Địa chỉ nhận hàng" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="#333333"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button Content="Thay đổi"
                                        HorizontalAlignment="Right"
                                        Click="ChangeAddress_Click"
                                        Foreground="#FF6B6B"
                                        Style="{StaticResource ButtonQueuePageNavigation}"/>
                            </Grid>

                            <!-- Address Details -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Side - Name and Phone -->
                                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock x:Name="CustomerNameText"
                                                   Text="Nguyễn Văn A" 
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333333"
                                                   Margin="0,0,8,0"/>
                                        <Border Background="#ffa2a2"
                                                CornerRadius="3"
                                                Padding="5,2">
                                            <TextBlock x:Name="DefaultAddressBadge"
                                                       Text="Mặc định" 
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>

                                    <TextBlock x:Name="CustomerPhoneText"
                                               Text="(+84) 0123 456 789"
                                               FontSize="14"
                                               Foreground="#666666"/>
                                </StackPanel>

                                <!-- Right Side - Full Address -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock x:Name="CustomerAddressText"
                                               Text="123 Đường Lê Lợi, Phường Bến Thành, Quận 1, TP. Hồ Chí Minh"
                                               FontSize="14"
                                               Foreground="#666666"
                                               LineHeight="20"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Product Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Sản phẩm" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <!-- Product Item -->
                            <ItemsControl x:Name="ProductItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F0F0F0"
                                                BorderThickness="0,0,0,1"
                                                Padding="0,10"
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Product Image -->
                                                <Border Grid.Column="0"
                                                        Width="70" Height="70"
                                                        CornerRadius="8"
                                                        Background="#F5F5F5"
                                                        Margin="0,0,15,0">
                                                    <Image Source="{Binding ImageUrl}" 
                                                           Stretch="UniformToFill"/>
                                                </Border>

                                                <!-- Product Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="15" 
                                                               FontWeight="Medium"
                                                               Foreground="#333333"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Variant}" 
                                                               FontSize="13"
                                                               Foreground="#888888"
                                                               Margin="0,0,0,5"/>
                                                    <TextBlock FontSize="13" Foreground="#666666">
                                                        <Run Text="Số lượng: x"/>
                                                        <Run Text="{Binding Quantity}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Price -->
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Price, StringFormat=₫ {0:N0}}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#ff6b6b"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Total Products and Amount -->
                            <Border Background="#F8F8F8"
                                    CornerRadius="8"
                                    Padding="15,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="TotalItemsText"
                                               Text="1 sản phẩm" 
                                               FontSize="14"
                                               Foreground="#666666"
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="Thành tiền" 
                                                   FontSize="13"
                                                   Foreground="#666666"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock x:Name="SubtotalText"
                                                   Text="₫ 2.000.000" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#333333"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Shipping Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="Đơn vị vận chuyển" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"
                                           Foreground="#333333"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Viettel Post (Selected) -->
                            <RadioButton x:Name="ViettelPostOption"
                                         Style="{StaticResource ShippingOptionStyle}"
                                         IsChecked="True"
                                         GroupName="Shipping"
                                         Checked="ShippingOptionChanged">
                                <RadioButton.Content>
                                    <StackPanel>
                                        <TextBlock Text="Viettel Post" 
                                                   FontSize="15" 
                                                   FontWeight="Medium"
                                                   Foreground="#333333"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Giao hàng: 3-4 ngày" 
                                                   FontSize="13"
                                                   Foreground="#666666"/>
                                    </StackPanel>
                                </RadioButton.Content>
                                <RadioButton.Tag>
                                    <StackPanel HorizontalAlignment="Right">
                                        <TextBlock Text="₫8.000" 
                                                   FontSize="12"
                                                   Foreground="#999999"
                                                   TextDecorations="Strikethrough"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock Text="₫0" 
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="#4CAF50"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </RadioButton.Tag>
                            </RadioButton>

                            <!-- Fast Shipping -->
                            <RadioButton x:Name="FastShippingOption"
                                         Style="{StaticResource ShippingOptionStyle}"
                                         GroupName="Shipping"
                                         Checked="ShippingOptionChanged">
                                <RadioButton.Content>
                                    <StackPanel>
                                        <TextBlock Text="Giao hàng nhanh" 
                                                   FontSize="15" 
                                                   FontWeight="Medium"
                                                   Foreground="#333333"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Giao hàng: 1-2 ngày" 
                                                   FontSize="13"
                                                   Foreground="#666666"/>
                                    </StackPanel>
                                </RadioButton.Content>
                                <RadioButton.Tag>
                                    <TextBlock Text="₫20.000" 
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="#333333"/>
                                </RadioButton.Tag>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                    <!-- Note for Seller -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Lưu ý cho người bán" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,10"/>
                            <TextBox x:Name="SellerNoteTextBox"
                                     Style="{StaticResource PlaceholderTextBoxStyle}"
                                     Tag="Để lại lưu ý (không bắt buộc)"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MaxLength="500"
                                     Height="80"
                                     VerticalContentAlignment="Top"
                                     Padding="10"
                                     BorderBrush="#DDDDDD"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Border>

                    <!-- Payment Method Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Phương thức thanh toán" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="#333333"/>
                                    <Border Background="#E8F5E9"
                                            BorderBrush="#4CAF50"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="6,2"
                                            HorizontalAlignment="Left"
                                            Margin="0,4,0,0">
                                        <TextBlock Text="PETSHOP ĐẢM BẢO" 
                                                   FontSize="10"
                                                   Foreground="#2E7D32"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- Credit/Debit Card -->
                            <RadioButton x:Name="CardPaymentOption"
                                         Style="{StaticResource PaymentMethodStyle}"
                                         GroupName="Payment">
                                <RadioButton.Content>
                                    <StackPanel>
                                        <TextBlock Text="Thẻ Tín dụng/Ghi nợ" 
                                                   FontSize="15" 
                                                   FontWeight="Medium"
                                                   Foreground="#333333"
                                                   Margin="0,0,0,0"/>
                                    </StackPanel>
                                </RadioButton.Content>
                                <RadioButton.Tag>
                                    <Border Background="{StaticResource QP.AccentBrush}"
                                            CornerRadius="4"
                                            Padding="8,4">
                                        <TextBlock Text="MỚI" 
                                                   FontSize="10"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </RadioButton.Tag>
                            </RadioButton>

                            <!-- Cash on Delivery (COD) -->
                            <RadioButton x:Name="CODPaymentOption"
                                         Style="{StaticResource PaymentMethodStyle}"
                                         GroupName="Payment"
                                         IsChecked="True">
                                <RadioButton.Content>
                                    <StackPanel>
                                        <TextBlock Text="Thanh toán khi nhận hàng" 
                                                   FontSize="15" 
                                                   FontWeight="Medium"
                                                   Foreground="#333333"
                                                   Margin="0,0,0,0"/>
                                    </StackPanel>
                                </RadioButton.Content>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                    <!-- Order Summary -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Chi tiết thanh toán" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <!-- Subtotal -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Tạm tính" 
                                           FontSize="14"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="SummarySubtotalText"
                                           Text="₫ 2.000.000" 
                                           FontSize="14"
                                           Foreground="#333333"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Shipping Fee -->
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Phí vận chuyển" 
                                           FontSize="14"
                                           Foreground="#666666"/>
                                <TextBlock x:Name="ShippingFeeText"
                                           FontSize="14"
                                           Foreground="#4CAF50"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Divider -->
                            <Border BorderBrush="#E0E0E0"
                                    BorderThickness="0,1,0,0"
                                    Margin="0,5,0,15"/>

                            <!-- Total -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="241*"/>
                                    <ColumnDefinition Width="45*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tổng cộng" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#333333" Grid.ColumnSpan="2"/>
                                <TextBlock x:Name="TotalAmountText"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#FF6B6B"
                                           HorizontalAlignment="Right" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Place Order Button -->
                    <Button x:Name="PlaceOrderButton"
                            Content="ĐẶT HÀNG"
                            Style="{StaticResource GradientButtonStyle}"
                            Height="50"
                            FontSize="16"
                            Margin="0,10,0,0"
                            Click="PlaceOrder_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>