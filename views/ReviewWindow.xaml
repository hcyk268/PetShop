<Window x:Class="Pet_Shop_Project.Views.ReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Đánh giá sản phẩm"
        Height="600"
        Width="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0"
                   Text="Đánh giá sản phẩm"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#FFAD57"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Product Info -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="2"
                CornerRadius="12"
                Padding="15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Product Image -->
                <Border Grid.Column="0"
                        Width="80"
                        Height="80"
                        CornerRadius="8"
                        Background="#F0F0F0"
                        Margin="0,0,15,0"
                        Loaded="ImageBorder_Loaded">
                    <Image x:Name="ProductImage" Stretch="UniformToFill"/>
                </Border>

                <!-- Product Details -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="ProductName"
                               Text="Tên sản phẩm"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,0,0,6"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock x:Name="ProductPrice"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   Foreground="#FF6B6B"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>

                        <!-- Discount -->
                        <Border x:Name="DiscountBadge"
                                Background="#FFE5E5"
                                BorderBrush="#FF8284"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="6,2"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                            <TextBlock x:Name="DiscountText"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="#FF6B6B"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Margin="0,0,0,0">
                        <Run Text="Số lượng: " Foreground="#666666"/>
                        <Run x:Name="ProductQuantity" Text="1" FontWeight="Bold" Foreground="#333333"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Đánh giá -->
        <StackPanel Grid.Row="2" Margin="0,0,0,0">
            <TextBlock Text="Xếp hạng"
                       FontSize="17"
                       FontWeight="SemiBold"
                       Foreground="#FFAD57"
                       Margin="0,0,0,12"/>

            <StackPanel x:Name="StarPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
            </StackPanel>
        </StackPanel>

        <!-- Bình luận -->
        <StackPanel Grid.Row="3" Margin="0,0,0,0">
            <TextBlock Text="Bình luận"
                       FontSize="17"
                       FontWeight="SemiBold"
                       Foreground="#FFAD57"
                       Margin="0,0,0,12"/>

            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <TextBlock x:Name="PlaceholderText"
                               Text="Nhập bình luận của bạn..."
                               FontSize="14"
                               Foreground="#999999"
                               IsHitTestVisible="False"
                               VerticalAlignment="Top"
                               Margin="2"/>

                    <TextBox x:Name="CommentTextBox"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Hidden"
                             Height="120"
                             BorderThickness="0"
                             FontSize="14"
                             Foreground="#333333"
                             Background="Transparent"
                             TextChanged="CommentTextBox_TextChanged"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Nút hủy/hoàn tất -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="SubmitButton"
                    Width="120"
                    Height="35"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    Click="SubmitButton_Click">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFAD56" Offset="0"/>
                        <GradientStop Color="#FFC281" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="16">
                            <TextBlock Text="Hoàn tất"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FF9D46" Offset="0"/>
                                            <GradientStop Color="#FFB271" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Hủy"
                    Width="120"
                    Height="35"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#666666"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2"
                    Cursor="Hand"
                    Click="CancelButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>