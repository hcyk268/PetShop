<Window x:Class="Pet_Shop_Project.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Đổi mật khẩu" 
        Height="650" 
        Width="480"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="White"
            CornerRadius="16"
            Padding="30"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                              BlurRadius="20" 
                              ShadowDepth="0" 
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Đổi mật khẩu"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#FFAD57"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Old Password -->
                    <TextBlock Text="Mật khẩu hiện tại"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#FFAD57"
                               Margin="0,0,0,8"/>
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="10"
                            Height="45"
                            Margin="0,0,0,5">
                        <Grid>
                            <PasswordBox x:Name="OldPasswordBox"
                                         FontSize="15"
                                         Padding="15,12,45,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                            <TextBox x:Name="OldPasswordTextBox"
                                     FontSize="15"
                                     Padding="15,12,45,12"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     Visibility="Collapsed"
                                     TextChanged="PasswordTextBox_TextChanged"/>

                            <Border Width="35"
                                    Height="35"
                                    Background="Transparent"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Cursor="Hand"
                                    MouseDown="ToggleOldPassword_Click">
                                <materialDesign:PackIcon x:Name="OldPasswordIcon"
                                                         Kind="EyeOff"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#FFAD57"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    <TextBlock x:Name="OldPasswordError"
                               FontSize="12"
                               Foreground="#FF6B6B"
                               Margin="5,5,0,0"
                               Visibility="Collapsed"/>

                    <!-- Spacing -->
                    <Border Height="15"/>

                    <!-- New Password -->
                    <TextBlock Text="Mật khẩu mới"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#FFAD57"
                               Margin="0,0,0,8"/>
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="10"
                            Height="45"
                            Margin="0,0,0,5">
                        <Grid>
                            <PasswordBox x:Name="NewPasswordBox"
                                         FontSize="15"
                                         Padding="15,12,45,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                            <TextBox x:Name="NewPasswordTextBox"
                                     FontSize="15"
                                     Padding="15,12,45,12"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     Visibility="Collapsed"
                                     TextChanged="PasswordTextBox_TextChanged"/>

                            <Border Width="35"
                                    Height="35"
                                    Background="Transparent"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Cursor="Hand"
                                    MouseDown="ToggleNewPassword_Click">
                                <materialDesign:PackIcon x:Name="NewPasswordIcon"
                                                         Kind="EyeOff"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#FFAD57"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    <TextBlock x:Name="NewPasswordError"
                               FontSize="12"
                               Foreground="#FF6B6B"
                               Margin="5,5,0,0"
                               Visibility="Collapsed"/>

                    <!-- Password Strength -->
                    <StackPanel x:Name="PasswordStrengthPanel"
                                Margin="5,8,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="Độ mạnh mật khẩu:"
                                   FontSize="12"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <ProgressBar x:Name="PasswordStrengthBar"
                                     Height="4"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="0"
                                     Foreground="#4CAF50"/>
                        <TextBlock x:Name="PasswordStrengthText"
                                   FontSize="11"
                                   Foreground="#666666"
                                   Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Spacing -->
                    <Border Height="15"/>

                    <!-- Confirm Password -->
                    <TextBlock Text="Xác nhận mật khẩu mới"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="#FFAD57"
                               Margin="0,0,0,8"/>
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            CornerRadius="10"
                            Height="45"
                            Margin="0,0,0,5">
                        <Grid>
                            <PasswordBox x:Name="ConfirmPasswordBox"
                                         FontSize="15"
                                         Padding="15,12,45,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                            <TextBox x:Name="ConfirmPasswordTextBox"
                                     FontSize="15"
                                     Padding="15,12,45,12"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     Visibility="Collapsed"
                                     TextChanged="PasswordTextBox_TextChanged"/>

                            <Border Width="35"
                                    Height="35"
                                    Background="Transparent"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"
                                    Cursor="Hand"
                                    MouseDown="ToggleConfirmPassword_Click">
                                <materialDesign:PackIcon x:Name="ConfirmPasswordIcon"
                                                         Kind="EyeOff"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#FFAD57"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    <TextBlock x:Name="ConfirmPasswordError"
                               FontSize="12"
                               Foreground="#FF6B6B"
                               Margin="5,5,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="0"
                        Content="Hủy"
                        Height="44"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="#666666"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="2"
                        Cursor="Hand"
                        Margin="0,0,8,0"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12">
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Save Button -->
                <Button Grid.Column="1"
                        x:Name="SaveButton"
                        Content="Lưu thay đổi"
                        Height="44"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="8,0,0,0"
                        Click="SaveButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FFAD56" Offset="0"/>
                            <GradientStop Color="#FFC281" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="12">
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FF9D46" Offset="0"/>
                                                <GradientStop Color="#FFB271" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>