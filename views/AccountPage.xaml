<Page x:Class="Pet_Shop_Project.Views.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="940"
      Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="20,15"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <Grid>
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="5">
                    <materialDesign:PackIcon Kind="ArrowLeft"
                                           Width="24"
                                           Height="24"
                                           Foreground="#FF9966"/>
                </Button>
                <TextBlock Text="Tài khoản"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Foreground="#FF9966"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" Margin="48,0,0,0"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Avatar & Buttons -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="15"
                    Padding="20"
                    BorderBrush="#F0F0F0"
                    BorderThickness="1" Grid.ColumnSpan="2" Margin="0,0,10,0">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Avatar -->
                    <Grid Width="150" Height="150" Margin="0,10,0,15">
                        <!-- Background Circle -->
                        <Ellipse Fill="#F5F5F5"/>

                        <!-- Avatar Image -->
                        <Ellipse x:Name="AvatarEllipse">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="AvatarBrush"
                                           ImageSource="/Images/avt.jpg"
                                           Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Camera Icon Overlay -->
                        <Border Width="32" Height="32"
                               Background="#FF6B6B"
                               CornerRadius="16"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,0"
                               Cursor="Hand"
                               MouseDown="ChangeAvatar_Click">
                            <materialDesign:PackIcon Kind="Camera"
                                                   Width="18"
                                                   Height="18"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- User Name -->
                    <TextBlock x:Name="UserNameText"
                              Text="Username"
                              FontSize="22"
                              FontWeight="Bold"
                              Foreground="#FF6B6B"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Margin="0,0,0,8"/>

                    <!-- Role Badge -->
                    <Border Background="#B6B6B5"
                           CornerRadius="12"
                           Padding="12,6"
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center" 
                           Height="30">
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <materialDesign:PackIcon x:Name="RoleIcon"
                                                   Kind="Account"
                                                   Width="16"
                                                   Height="16"
                                                   Foreground="White"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock x:Name="RoleText"
                                      Text="Khách hàng"
                                      FontSize="13"
                                      FontWeight="Medium"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Change Password Button -->
                    <Button Content="Đổi mật khẩu"
                           Background="#FFAD57"
                           Foreground="White"
                           FontSize="13"
                           FontWeight="Medium"
                           Height="30"
                           Margin="0,95,0,10"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="ChangePassword_Click" Width="145">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="19">
                                                <StackPanel Orientation="Horizontal" 
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Key"
                                                                           Width="16"
                                                                           Height="16"
                                                                           Foreground="White"
                                                                           Margin="0,0,8,0"
                                                                           VerticalAlignment="Center"/>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF8547"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Đăng xuất"
                           Background="#FFA4A4"
                           Foreground="White"
                           FontSize="13"
                           FontWeight="Medium"
                           Height="30"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="LogoutButton_Click" Width="145">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="19">
                                                <StackPanel Orientation="Horizontal" 
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Logout"
                                                                           Width="16"
                                                                           Height="16"
                                                                           Foreground="White"
                                                                           Margin="0,0,8,0"
                                                                           VerticalAlignment="Center"/>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF9AA0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Right Panel - User Details -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="15"
                    Padding="30"
                    BorderBrush="#F0F0F0"
                    BorderThickness="1" Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,0">
                    <StackPanel>
                        <!-- Title with Edit/Save/Cancel Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Thông tin liên hệ"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="#FFAD57"
                                      VerticalAlignment="Center"/>

                            <!-- Edit Button -->
                            <Button x:Name="EditButton"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Padding="5"
                                   Margin="10,0,0,0"
                                   Click="EditButton_Click"
                                   ToolTip="Chỉnh sửa thông tin">
                                <materialDesign:PackIcon Kind="Pencil"
                                                       Width="18"
                                                       Height="18"
                                                       Foreground="#666666"/>
                            </Button>

                            <!-- Save Button (Hidden by default) -->
                            <Button x:Name="SaveButton"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Padding="5"
                                   Margin="5,0,0,0"
                                   Click="SaveButton_Click"
                                   Visibility="Collapsed"
                                   ToolTip="Lưu thay đổi">
                                <materialDesign:PackIcon Kind="ContentSave"
                                                       Width="18"
                                                       Height="18"
                                                       Foreground="#4CAF50"/>
                            </Button>

                            <!-- Cancel Button (Hidden by default) -->
                            <Button x:Name="CancelButton"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Padding="5"
                                   Margin="5,0,0,0"
                                   Click="CancelButton_Click"
                                   Visibility="Collapsed"
                                   ToolTip="Hủy">
                                <materialDesign:PackIcon Kind="Close"
                                                       Width="18"
                                                       Height="18"
                                                       Foreground="#F44336"/>
                            </Button>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Email:"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#757575"
                                      Margin="0,0,0,5"/>
                            <!-- Display Mode -->
                            <Border x:Name="EmailDisplayBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="15,12">
                                <TextBlock x:Name="EmailText"
                                          Text="email@example.com"
                                          FontSize="14"
                                          Foreground="#333333"/>
                            </Border>
                            <!-- Edit Mode -->
                            <Border x:Name="EmailEditBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="10,8"
                                   Visibility="Collapsed">
                                <TextBox x:Name="EmailTextBox"
                                        Text="email@example.com"
                                        FontSize="14"
                                        Foreground="#333333"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="5,4"/>
                            </Border>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Margin="0,15,0,15">
                            <TextBlock Text="Địa chỉ:"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#757575"
                                      Margin="0,0,0,5"/>
                            <!-- Display Mode -->
                            <Border x:Name="AddressDisplayBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="15,12">
                                <TextBlock x:Name="AddressText"
                                          Text="Chưa cập nhật"
                                          FontSize="14"
                                          Foreground="#999999"
                                          TextWrapping="Wrap"/>
                            </Border>
                            <!-- Edit Mode -->
                            <Border x:Name="AddressEditBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="10,8"
                                   Visibility="Collapsed">
                                <TextBox x:Name="AddressTextBox"
                                        Text="Chưa cập nhật"
                                        FontSize="14"
                                        Foreground="#333333"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="5,4"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        MinHeight="40"/>
                            </Border>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Margin="0,5,0,30">
                            <TextBlock Text="Số điện thoại:"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#757575"
                                      Margin="0,0,0,8"/>
                            <!-- Display Mode -->
                            <Border x:Name="PhoneDisplayBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="15,12">
                                <TextBlock x:Name="PhoneText"
                                          Text="Chưa cập nhật"
                                          FontSize="14"
                                          Foreground="#999999"/>
                            </Border>
                            <!-- Edit Mode -->
                            <Border x:Name="PhoneEditBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="10,8"
                                   Visibility="Collapsed">
                                <TextBox x:Name="PhoneTextBox"
                                        Text="Chưa cập nhật"
                                        FontSize="14"
                                        Foreground="#333333"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="5,4"/>
                            </Border>
                        </StackPanel>

                        <!-- Account Info Section -->
                        <TextBlock Text="Thông tin tài khoản"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#FFAD57"
                                  Margin="0,-10,0,5"/>

                        <!-- Full Name -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Họ tên:"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#757575"
                                      Margin="0,0,0,5"/>
                            <!-- Display Mode -->
                            <Border x:Name="FullNameDisplayBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="15,12">
                                <TextBlock x:Name="FullNameText"
                                          Text="Chưa cập nhật"
                                          FontSize="14"
                                          Foreground="#999999"/>
                            </Border>
                            <!-- Edit Mode -->
                            <Border x:Name="FullNameEditBorder"
                                   Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="10,8"
                                   Visibility="Collapsed">
                                <TextBox x:Name="FullNameTextBox"
                                        Text="Chưa cập nhật"
                                        FontSize="14"
                                        Foreground="#333333"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="5,4"/>
                            </Border>
                        </StackPanel>

                        <!-- Join Date (Read-only) -->
                        <StackPanel Margin="0,5,0,15">
                            <TextBlock Text="Ngày tham gia:"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#757575"
                                      Margin="0,0,0,5"/>
                            <Border Background="#FFF3E6"
                                   CornerRadius="8"
                                   Padding="15,12">
                                <TextBlock x:Name="JoinDateText"
                                          Text="01/01/2024"
                                          FontSize="14"
                                          Foreground="#333333"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>