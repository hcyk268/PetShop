<Page x:Class="Pet_Shop_Project.Views.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="940"
      Background="#F5F5F5">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="THÔNG TIN TÀI KHOẢN"
                      FontSize="32"
                      FontWeight="Bold"
                      Foreground="#F78272"
                      HorizontalAlignment="Center"/>
        </StackPanel>
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Left Panel - Avatar & Role -->
            <Border Grid.Column="0"
                   Background="White"
                   CornerRadius="20"
                   Padding="30"
                   Margin="0,0,20,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <!-- Avatar -->
                    <Grid Width="150" Height="150" Margin="0,0,0,20">
                        <!-- Background Circle -->
                        <Ellipse Fill="#F8FFFE"
                                Stroke="#F78272"
                                StrokeThickness="3"/>
                        <!-- Avatar Image -->
                        <Ellipse x:Name="AvatarEllipse">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="AvatarBrush"
                                           ImageSource="/Images/avt.jpg"
                                           Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <!-- Camera Icon Overlay -->
                        <Border Width="40" Height="40"
                               Background="#F78272"
                               CornerRadius="20"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right"
                               Margin="0,105,5,0"
                               Cursor="Hand"
                               MouseDown="ChangeAvatar_Click">
                            <materialDesign:PackIcon Kind="Camera"
                                                   Width="24"
                                                   Height="24"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                        </Border>
                    </Grid>
                    <!-- User Name -->
                    <TextBlock x:Name="UserNameText"
                              Text="Tên người dùng"
                              FontSize="22"
                              FontWeight="Bold"
                              Foreground="#333333"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Margin="0,0,0,10"/>
                    <!-- Role Badge -->
                    <Border Background="#FFCC96"
                           CornerRadius="15"
                           Padding="15,8"
                           Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="ShieldAccount"
                                                   Width="20"
                                                   Height="20"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock x:Name="RoleText"
                                      Text="Khách hàng"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <!-- Logout Button -->
                    <Button Content="Đăng xuất"
                           Background="#FF6B6B"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Height="40"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="LogoutButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="20"
                                                   Padding="20,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF5252"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
            <!-- Right Panel - User Details -->
            <Border Grid.Column="1"
                   Background="White"
                   CornerRadius="20"
                   Padding="40">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Title -->
                        <TextBlock Text="THÔNG TIN CHI TIẾT"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="#F78272"
                                  Margin="0,0,0,30"/>
                        <!-- Email -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Email"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>
                            <Border Background="#F8FFFE"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1"
                                   CornerRadius="10"
                                   Padding="15">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Email"
                                                           Width="20"
                                                           Height="20"
                                                           Foreground="#F78272"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                    <TextBlock x:Name="EmailText"
                                              Text="email@example.com"
                                              FontSize="15"
                                              Foreground="#333333"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <!-- Phone -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Số điện thoại"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>
                            <Border Background="#F8FFFE"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1"
                                   CornerRadius="10"
                                   Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Phone"
                                                               Width="20"
                                                               Height="20"
                                                               Foreground="#F78272"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                        <TextBlock x:Name="PhoneText"
                                                  Text="Chưa cập nhật"
                                                  FontSize="15"
                                                  Foreground="#333333"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                           Content="Sửa"
                                           FontSize="12"
                                           Foreground="#F78272"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Cursor="Hand"
                                           Click="EditPhone_Click"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <!-- Address -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Địa chỉ"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>
                            <Border Background="#F8FFFE"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1"
                                   CornerRadius="10"
                                   Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MapMarker"
                                                               Width="20"
                                                               Height="20"
                                                               Foreground="#F78272"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                        <TextBlock x:Name="AddressText"
                                                  Text="Chưa cập nhật"
                                                  FontSize="15"
                                                  Foreground="#333333"
                                                  VerticalAlignment="Center"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                           Content="Sửa"
                                           FontSize="12"
                                           Foreground="#F78272"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Cursor="Hand"
                                           Click="EditAddress_Click"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                        <!-- Join Date -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Ngày tham gia"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#666666"
                                      Margin="0,0,0,8"/>
                            <Border Background="#F8FFFE"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1"
                                   CornerRadius="10"
                                   Padding="15">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Calendar"
                                                           Width="20"
                                                           Height="20"
                                                           Foreground="#F78272"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,10,0"/>
                                    <TextBlock x:Name="JoinDateText"
                                              Text="01/01/2024"
                                              FontSize="15"
                                              Foreground="#333333"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <!-- Change Password Button -->
                        <Button Content="Đổi mật khẩu"
                               Background="#FFCC96"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Height="45"
                               BorderThickness="0"
                               Cursor="Hand"
                               Margin="0,10,0,0"
                               Click="ChangePassword_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="22.5"
                                                       Padding="20,0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFB366"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>