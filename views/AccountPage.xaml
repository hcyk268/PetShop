<Window x:Class="Pet_Shop_Project.Views.AccountPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pet_Shop_Project.Views"
        mc:Ignorable="d"
        Title="AccountPage" Height="650" Width="1000">



    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource MaterialDesignDarkSeparatorBackground}"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>

        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource MaterialDesignBody}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource MaterialDesignDarkBackground}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Image with Overlay -->
        <Grid>
            <Grid.Background>
                <ImageBrush x:Name="BackgroundImage" 
                           
                           Stretch="UniformToFill"/>
                
            </Grid.Background>
            <Grid.OpacityMask>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#AA000000" Offset="0"/>
                    <GradientStop Color="#DD000000" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
        </Grid>

        <!-- Main Content Grid -->
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Profile Card -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="15" 
                    Padding="25"
                    VerticalAlignment="Center" Height="554">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="15" 
                                    Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Avatar with Edit Button -->
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse Width="150" Height="150">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="AvatarImage" 
                                            
                                          ImageSource="/Images/bear1.jpg"
                                          Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Change Avatar Button -->
                    </Grid>

                    <!-- Name and Role -->
                    <TextBlock x:Name="txtFullName" 
                             Text="Nguyễn Ngọc Thu An" 
                             FontSize="20"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             Foreground="RosyBrown"
                             Margin="0,0,0,5"/>

                    <Border x:Name="borderRole"
                          Background="DimGray" 
                          CornerRadius="12" 
                          Padding="12,6"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,25">
                        <TextBlock x:Name="txtRole" 
                                 Text="Khách hàng" 
                                 Foreground="White"
                                 FontWeight="SemiBold"
                                 FontSize="13"/>
                    </Border>

                    <!-- Quick Stats -->
                    <Border Background="FloralWhite"
                           CornerRadius="10"
                           Padding="15"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Thống Kê Nhanh" 
                                     Foreground="SandyBrown"
                                     FontWeight="Bold"
                                     Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock x:Name="txtTotalOrders" 
                                             Text="0" 
                                             FontSize="24"
                                             FontWeight="Bold"
                                             Foreground="Black"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Đơn hàng" 
                                             FontSize="12"
                                             Foreground="Black"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock x:Name="txtMemberSince" 
                                             Text="2024" 
                                             FontSize="24"
                                             FontWeight="Bold"
                                             Foreground="Black"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Thành viên" 
                                             FontSize="12"
                                             Foreground="Black"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Button Content="Chuyển tài khoản" 
                          Height="40"
                          Background="LightGray"
                          Foreground="White"
                          BorderThickness="0"
                          FontWeight="SemiBold"
                          Margin="0,0,0,10"
                          Click="btnChangePassword_Click"
                          Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Đăng Xuất" 
                          Height="40"
                          Background="LightGray"
                          Foreground="White"
                          BorderThickness="0"
                          FontWeight="SemiBold"
                          Click="btnLogout_Click"
                          Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Right Panel - Detailed Information -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="15" 
                    Padding="30"
                    Margin="20,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="15" 
                                    Opacity="0.3"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Header with Edit Button -->
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Thông Tin Chi Tiết" 
                                     FontSize="24" 
                                     FontWeight="Bold"
                                     Foreground="SaddleBrown"
                                     />

                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Right">
                                <Button Style="{StaticResource IconButtonStyle}"
                                      Click="btnEdit_Click"
                                      ToolTip="Chỉnh sửa thông tin">
                                    <TextBlock Text="✏️" FontSize="20"/>
                                </Button>
                                <Button Style="{StaticResource IconButtonStyle}"
                                      Click="btnRefresh_Click"
                                      ToolTip="Làm mới">
                                    <TextBlock Text="🔄" FontSize="20"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Contact Information Section -->
                        <TextBlock Text="📧 Thông Tin Liên Hệ" 
                                  Foreground="Coral"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Email:" Style="{StaticResource InfoLabelStyle}"/>
                                <Border Background="FloralWhite"
                                      CornerRadius="8"
                                      Padding="12"
                                      Margin="0,0,0,15">
                                    <TextBlock x:Name="txtEmail" 
                                             Text="nguyenngocthu.an06@gmail.com" 
                                             Foreground="DimGray"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                <TextBlock Text="Số Điện Thoại:" Style="{StaticResource InfoLabelStyle}"/>
                                <Border Background="FloralWhite"
                                      CornerRadius="8"
                                      Padding="12"
                                      Margin="0,0,0,15" Height="39">
                                    <TextBlock x:Name="txtPhone" 
                                             Text="0903823985" 
                                             Foreground="DimGray"
                                             Margin="0"/>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Address Information -->
                        <TextBlock Text="Địa Chỉ:" Style="{StaticResource InfoLabelStyle}"/>
                        <Border Background="FloralWhite"
                              CornerRadius="8"
                              Padding="12"
                              Margin="0,0,0,15">
                            <TextBlock x:Name="txtAddress" 
                                     Text="50 đường 27, phường Hiệp Bình, thành phố Thủ Đức, thành phố Hồ Chí Minh" 
                                     Foreground="DimGray"
                                     Margin="0"/>
                        </Border>

                        <!-- Account Information Section -->
                        <TextBlock Text="👤 Thông Tin Tài Khoản" 
                                 Foreground="Coral"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Ngày Tạo:" Style="{StaticResource InfoLabelStyle}"/>
                                <Border Background="FloralWhite"
                                      CornerRadius="8"
                                      Padding="12"
                                      Margin="0,0,0,15">
                                    <TextBlock x:Name="txtCreatedDate" 
                                             Text="Đang tải..." 
                                             Foreground="DimGray"
                                             Margin="0"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                <TextBlock Text="Lần Đăng Nhập Cuối:" Style="{StaticResource InfoLabelStyle}"/>
                                <Border Background="FloralWhite"
                                      CornerRadius="8"
                                      Padding="12"
                                      Margin="0,0,0,15">
                                    <TextBlock x:Name="txtLastLogin" 
                                             Text="Đang tải..." 
                                             Foreground="DimGray"
                                             Margin="0"/>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Preferences Section -->
                        <TextBlock Text="⚙️ Tùy Chọn" 
                                  Foreground="Coral"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10"/>

                        <Border Background="FloralWhite"
                              CornerRadius="8"
                              Padding="15"
                              Margin="0,0,0,15">
                            <StackPanel>
                                <CheckBox x:Name="chkEmailNotifications"
                                        Content="Nhận thông báo qua Email"
                                        Margin="0,0,0,10"
                                        Foreground="DimGray"
                                        Checked="chkEmailNotifications_Changed"
                                        Unchecked="chkEmailNotifications_Changed"/>

                                <CheckBox x:Name="chkSMSNotifications"
                                        Content="Nhận thông báo qua SMS"
                                        Margin="0,0,0,10"
                                        Foreground="DimGray"
                                        Checked="chkSMSNotifications_Changed"
                                        Unchecked="chkSMSNotifications_Changed"/>

                                <CheckBox x:Name="chkNewsletters"
                                        Content="Đăng ký nhận tin khuyến mãi"
                                        Foreground="DimGray"
                                        Checked="chkNewsletters_Changed"
                                        Unchecked="chkNewsletters_Changed"/>
                            </StackPanel>
                        </Border>

                        <!-- Background Settings -->
                        <TextBlock Text="🎨 Tùy Chỉnh Giao Diện" 
                                 Style="{StaticResource MaterialDesignOverlineTextBlock}"/>

                        <Button Content="Thay Đổi Hình Nền" 
                              Height="40"
                              Background="gray"
                              Foreground="White"
                              BorderThickness="0"
                              FontWeight="SemiBold"
                              Click="btnChangeBackground_Click"
                              Cursor="Hand"
                              Margin="0,0,0,30">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
