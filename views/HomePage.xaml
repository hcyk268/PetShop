<Page x:Class="Pet_Shop_Project.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:controls="clr-namespace:Pet_Shop_Project.Controls"
      mc:Ignorable="d"
      Title="HomePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Bar (Reusable Control) -->
        <controls:NavigationBar Grid.Column="0"/>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,0,1"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo -->
                    <TextBlock Grid.Column="0" 
                               Text="Logo" 
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"
                               Margin="0,0,40,0"/>

                    <!-- Search Section -->
                    <Grid Grid.Column="1" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box with Material Design -->
                        <Border Grid.Column="0" 
                                Background="White"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="2"
                                CornerRadius="25"
                                Margin="0,0,20,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                        Kind="Magnify"
                                                        Width="24"
                                                        Height="24"
                                                        Margin="15,0,10,0"
                                                        VerticalAlignment="Center"
                                                        Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                                <TextBox Grid.Column="1"
                                         x:Name="SearchTextBox"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalAlignment="Center"
                                         FontSize="16"
                                         materialDesign:HintAssist.Hint="Tìm kiếm sản phẩm..."
                                         Padding="5,8,15,8"/>
                            </Grid>
                        </Border>

                        <!-- Filter Button -->
                        <Button Grid.Column="1"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="40"
                                Padding="25,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Filter" 
                                                            Width="18" 
                                                            Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="Filter"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- Category Navigation Bar -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,0,1"
                    Padding="20,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Thức Ăn" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Height="40"
                            Padding="20,0"
                            Margin="0,0,15,0"/>
                    <Button Content="Đồ chơi" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Height="40"
                            Padding="20,0"
                            Margin="0,0,15,0"/>
                    <Button Content="Dụng cụ &amp; Thiết bị" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Height="40"
                            Padding="20,0"/>
                </StackPanel>
            </Border>

            <!-- Main Content - Scrollable Area -->
            <ScrollViewer Grid.Row="2" 
                         VerticalScrollBarVisibility="Auto"
                         Background="{DynamicResource MaterialDesignPaper}">
                <StackPanel Margin="20">
                    <!-- Advertisement Banner -->
                    <materialDesign:Card Margin="0,0,0,30"
                                        UniformCornerRadius="10">
                        <Grid Height="200" Background="#FFE0E0E0">
                            <!-- Placeholder for Advertisement -->
                            <TextBlock Text="Bìa quảng cáo"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                            <!-- Yellow note panel on the right -->
                            <materialDesign:Card Background="#FFFEF3C7"
                                                Width="150"
                                                Height="120"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,30,20,0"
                                                Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Bìa quảng cáo sản phẩm"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"
                                               Foreground="#FF856404"/>
                                    <TextBlock Text="Ấn Nguyễn"
                                               FontSize="10"
                                               Margin="0,8,0,0"
                                               Foreground="#FF856404"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Product Grid -->
                    <ItemsControl x:Name="ProductsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Width="220"
                                                    Margin="0,0,20,20"
                                                    UniformCornerRadius="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="220"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Product Image -->
                                        <Border Grid.Row="0" 
                                                Background="#FFF8F8F8">
                                            <Image Source="{Binding ImageUrl}" 
                                                   Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Product Info Panel -->
                                        <Border Grid.Row="1"
                                                Background="White"
                                                Padding="12">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Product Name -->
                                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                                           Text="{Binding Name}"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource MaterialDesignBody}"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,8"/>

                                                <!-- Rating -->
                                                <StackPanel Grid.Row="1" Grid.Column="0" 
                                                            Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Star" 
                                                                            Width="16" 
                                                                            Height="16"
                                                                            Foreground="#FFFFC107"
                                                                            Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Rating}" 
                                                               FontSize="12"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                </StackPanel>

                                                <!-- Add to Cart Button -->
                                                <!-- NOTE: Placeholder button - Cart functionality to be implemented -->
                                                <Button Grid.Row="1" Grid.Column="1"
                                                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                                        Width="36"
                                                        Height="36"
                                                        Background="{DynamicResource PrimaryHueMidBrush}"
                                                        BorderThickness="0"
                                                        Tag="{Binding}"
                                                        ToolTip="Thêm vào giỏ hàng">
                                                    <materialDesign:PackIcon Kind="Plus" 
                                                                            Width="20" 
                                                                            Height="20"
                                                                            Foreground="White"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Yellow Service Note -->
                    <materialDesign:Card Background="#FFFEF3C7"
                                        Width="150"
                                        Height="80"
                                        HorizontalAlignment="Right"
                                        Margin="0,20,40,20"
                                        Padding="12">
                        <StackPanel>
                            <TextBlock Text="Services"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#FF856404"/>
                            <TextBlock Text="Ấn Nguyễn"
                                       FontSize="10"
                                       Margin="0,8,0,0"
                                       Foreground="#FF856404"/>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>