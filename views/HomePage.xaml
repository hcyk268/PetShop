<Page x:Class="Pet_Shop_Project.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:controls="clr-namespace:Pet_Shop_Project.Controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Background="#F5F5F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Bar -->
        <controls:NavigationBar Grid.Column="0"/>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo and Search - Background F5F5F5 -->
            <Grid Grid.Row="0" 
                  Background="#F5F5F5"
                  Margin="25,10,15,90" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and MIMI Text -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <Border Width="50" Height="50" 
                           Background="#FFCC96"
                           CornerRadius="25"
                           Margin="0,0,12,0">
                        <Image Source="/Resources/logo.png" 
                               Stretch="Uniform"
                               Margin="8"/>
                    </Border>
                    <TextBlock FontSize="42"
                              FontWeight="Bold"
                              VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#F78272" Offset="0"/>
                                <GradientStop Color="#FFCC96" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <Run Text="MIMI"/>
                    </TextBlock>
                </StackPanel>

                <!-- Search Box -->
                <Border Grid.Column="1"
                       Background="White"
                       CornerRadius="15"
                       Height="30"
                       Margin="50,0,100,0"
                       VerticalAlignment="Center"
                       Padding="18,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0"
                                               Kind="Magnify"
                                               Width="22"
                                               Height="22"
                                               Foreground="#999999"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>

                        <TextBox Grid.Column="1"
                                x:Name="SearchBox"
                                FontSize="16"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center"
                                Foreground="#333333"
                                materialDesign:HintAssist.Hint="Tìm kiếm sản phẩm"
                                materialDesign:HintAssist.Foreground="#999999"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Category Buttons - Background F5F5F5 -->
            <StackPanel Grid.Row="1" 
                       Background="#F5F5F5"
                       Orientation="Horizontal"
                       HorizontalAlignment="Left"
                       Margin="25,40,0,10">

                <Button Style="{StaticResource CategoryButtonStyle}"
                       Content="Thức ăn"
                       x:Name="FoodButton"
                       Click="FoodButton_Click">
                    <Button.Tag>
                        <materialDesign:PackIcon Kind="Food"
                                               Width="25"
                                               Height="25"
                                               Foreground="White"/>
                    </Button.Tag>
                </Button>

                <Button Style="{StaticResource CategoryButtonStyle}"
                       Content="Đồ chơi"
                       x:Name="ToyButton"
                       Click="ToyButton_Click">
                    <Button.Tag>
                        <materialDesign:PackIcon Kind="ChildrenToy"
                                               Width="25"
                                               Height="25"
                                               Foreground="White"/>
                    </Button.Tag>
                </Button>

                <Button Style="{StaticResource CategoryButtonStyle}"
                       Content="Dụng cụ"
                       x:Name="ToolButton"
                       Click="ToolButton_Click">
                    <Button.Tag>
                        <materialDesign:PackIcon Kind="Brush"
                                               Width="25"
                                               Height="25"
                                               Foreground="White"/>
                    </Button.Tag>
                </Button>
            </StackPanel>

            <!-- Main Content Area - Background F8FFFE -->
            <Grid Grid.Row="2" Background="#F8FFFE">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Banner/Advertisement -->
                <Border Grid.Row="0"
                       Background="White"
                       Height="120"
                       CornerRadius="12"
                       Margin="25,25,25,25">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Image x:Name="BannerImage" 
                              Stretch="UniformToFill"
                              ClipToBounds="True">
                            <Image.Clip>
                                <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,790,120"/>
                            </Image.Clip>
                        </Image>
                        <!-- Placeholder when no banner -->
                        <Border x:Name="BannerPlaceholder"
                               Background="#E8E8E8"
                               CornerRadius="12">
                            <TextBlock Text="Banner Quảng Cáo"
                                     FontSize="24"
                                     FontWeight="SemiBold"
                                     Foreground="#AAAAAA"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Filter Section -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal"
                           Margin="25,0,25,20">
                    <materialDesign:PackIcon Kind="Filter"
                                           Width="25"
                                           Height="25"
                                           Foreground="#FFA500"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                    <TextBlock Text="Filter by"
                              FontSize="15"
                              FontWeight="SemiBold"
                              Foreground="#FFA500"
                              VerticalAlignment="Center"
                              Margin="0,0,12,0"/>

                    <Border Background="White"
                           BorderBrush="#FFA500"
                           BorderThickness="1.5"
                           CornerRadius="15"
                           Height="30"
                           MinWidth="100"
                           Padding="12,0">
                        <ComboBox x:Name="FilterComboBox"
                                BorderThickness="0"
                                Background="Transparent"
                                FontSize="13"
                                VerticalContentAlignment="Center"
                                SelectionChanged="FilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                            <ComboBoxItem Content="Giá thấp đến cao"/>
                            <ComboBoxItem Content="Giá cao đến thấp"/>
                            <ComboBoxItem Content="Đánh giá cao nhất"/>
                        </ComboBox>
                    </Border>
                </StackPanel>

                <!-- Products Grid -->
                <ScrollViewer Grid.Row="2" 
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             Margin="15,0,15,15">
                    <WrapPanel x:Name="ProductsPanel"
                              Orientation="Horizontal"
                              HorizontalAlignment="Left">
                        <!-- ProductCards will be added here dynamically -->
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>