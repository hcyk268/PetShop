<Page x:Class="Pet_Shop_Project.Views.AdminReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="Quản lý đánh giá">

    <Grid Background="#FFF7F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Quản lý đánh giá" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#FFAD57"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                    <Border Background="#FFAD57" 
                            CornerRadius="12" 
                            Padding="12,6" 
                            Margin="15,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="TotalReviewsText" 
                                   Text="{Binding TotalReviews, StringFormat={}{0} đánh giá}" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Star Filter - Styled like HomePage Filter -->
                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="#FFA500"
                        BorderThickness="1.5"
                        CornerRadius="15"
                        Height="30"
                        MinWidth="100"
                        Padding="12,0"
                        Margin="0,0,15,0">
                    <ComboBox x:Name="CmbStarFilter"
                              BorderThickness="0"
                              Background="Transparent"
                              FontSize="13"
                              VerticalContentAlignment="Center"
                              SelectionChanged="CmbStarFilter_SelectionChanged">
                        <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                        <ComboBoxItem Content="5 sao"/>
                        <ComboBoxItem Content="4 sao"/>
                        <ComboBoxItem Content="3 sao"/>
                        <ComboBoxItem Content="2 sao"/>
                        <ComboBoxItem Content="1 sao"/>
                    </ComboBox>
                </Border>

                <!-- Search - Styled like HomePage Search -->
                <Border Grid.Column="2" 
                        Background="White"
                        BorderBrush="#FFA500"
                        BorderThickness="1.5"
                        CornerRadius="15" 
                        Height="30"
                        Padding="12,0"
                        Margin="0,0,15,0"
                        Width="200">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Magnify"
                                                 Width="18"
                                                 Height="18"
                                                 Foreground="#999999"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>

                        <TextBox Grid.Column="1"
                                 x:Name="SearchBox"
                                 FontSize="13"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 Foreground="#333333"
                                 TextChanged="SearchBox_TextChanged"
                                 materialDesign:HintAssist.Hint="Tìm kiếm..."
                                 materialDesign:HintAssist.Foreground="#999999"/>
                    </Grid>
                </Border>

                <!-- Add Button -->
                <Button Grid.Column="3"
                        Style="{StaticResource FakeReviewButtonStyle}"
                        Height="35"
                        Click="BtnAddVirtualReview_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                                 Width="26" Height="26"
                                                 Margin="4,0,0,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Thêm đánh giá ảo" 
                                   Margin="4,0,8,0"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Reviews List -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="12"
                Margin="20,20,20,20">
            <Grid>
                <!-- Scrollable Reviews -->
                <ScrollViewer x:Name="ReviewScrollViewer"
                              Margin="10"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding FilteredReviews}">
                        <ItemsControl.Resources>
                            <Style x:Key="ReviewCardStyle" TargetType="Border">
                                <Setter Property="Background" Value="#FAFAFA"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="CornerRadius" Value="8"/>
                                <Setter Property="Padding" Value="15"/>
                                <Setter Property="Margin" Value="8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            <TranslateTransform Y="0"/>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#22000000"
                                                          BlurRadius="4"
                                                          ShadowDepth="0"
                                                          Opacity="0.18"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                                    <GradientStop Color="#FFFFFBF7" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#ffc476"
                                                                  BlurRadius="10"
                                                                  ShadowDepth="0"
                                                                  Opacity="0.25"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <TransformGroup>
                                                    <ScaleTransform ScaleX="1.003" ScaleY="1.003"/>
                                                    <TranslateTransform Y="-1"/>
                                                </TransformGroup>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Resources>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ReviewCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <!-- Product ID & User -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Sản phẩm:" 
                                                           Foreground="#888" 
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding ProductId}" 
                                                           Foreground="#FFAD57" 
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           Margin="5,0,6,0"
                                                           MaxWidth="120"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding ProductName}"
                                                           Foreground="#666"
                                                           FontSize="12"
                                                           Margin="0,0,15,0"
                                                           MaxWidth="180"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding ProductName}"/>
                                                <TextBlock Text="Người đánh giá:" 
                                                           Foreground="#888" 
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding UserId}" 
                                                           Foreground="#666"
                                                           FontSize="12"
                                                           Margin="5,0,6,0"
                                                           MaxWidth="100"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding UserName}"
                                                           Foreground="#666"
                                                           FontSize="12"
                                                           Margin="0,0,0,0"
                                                           MaxWidth="160"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding UserName}"/>
                                            </StackPanel>

                                            <!-- Rating -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <ItemsControl ItemsSource="{Binding RatingStars}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <materialDesign:PackIcon Kind="Star" 
                                                                                     Width="16" Height="16"
                                                                                     Foreground="#FFB800"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock Text="{Binding ReviewDate, StringFormat='({0:dd/MM/yyyy})'}" 
                                                           Foreground="#888"
                                                           FontSize="11"
                                                           Margin="10,0,0,0"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Comment -->
                                            <TextBlock Text="{Binding Comment}" 
                                                       Foreground="#333"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="40"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Delete Button -->
                                        <Button Grid.Column="1"
                                                Style="{StaticResource DeleteButtonStyle}"
                                                Click="BtnDelete_Click"
                                                Tag="{Binding}"
                                                ToolTip="Xóa đánh giá">
                                            <materialDesign:PackIcon Kind="Delete" 
                                                                     Width="18" Height="18"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <materialDesign:PackIcon Kind="CommentRemoveOutline" 
                                             Width="64" Height="64"
                                             Foreground="#CCC"
                                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Chưa có đánh giá nào"
                               FontSize="16"
                               Foreground="#888"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
