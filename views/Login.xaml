<Window x:Class="Pet_Shop_Project.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Pet Shop - Đăng nhập" 
        Height="650" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <!-- Layer 1: Hình nền -->
        <Image Source="/Images/download.jpg" 
               Stretch="UniformToFill"
               Opacity="1"/>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ✅ CARD CHỨA FRAME ĐỂ LOAD PAGE -->
            <materialDesign:Card Grid.Row="0" 
                                 Padding="0" 
                                 Width="550" 
                                 MaxHeight="600"
                                 UniformCornerRadius="20" 
                                 materialDesign:ElevationAssist.Elevation="Dp16" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 Background="White">

                <!-- Frame để load SignIn.xaml hoặc SignUp.xaml -->
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden" 
                       Margin="0"/>
            </materialDesign:Card>

            <!-- Footer -->
            <TextBlock Grid.Row="1" 
                       Text="© Pet Shop Management 2025"
                       Foreground="LightGray"
                       FontSize="15"
                       FontWeight="Light"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="2" 
                                     ShadowDepth="1" 
                                     Opacity="1"
                                     Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>
    </Grid>
</Window>