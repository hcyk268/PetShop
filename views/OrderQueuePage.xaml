<Page x:Class="Pet_Shop_Project.Views.OrderQueuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="OrderQueuePage"
      Height="650" 
      Width="940">

    <Grid Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>


        <Grid x:Name="Header" 
                Grid.Row="0"
                Margin="0,0,0,0"
                Style="{StaticResource HeaderOderQueuePage}">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Style="{StaticResource TextHeaderOderQueuePage}">
                <InlineUIContainer>
                    <materialDesign:PackIcon Kind="ClipboardListOutline"
                                              Width="32"
                                              Height="32"
                                              Foreground="#FF6B6B"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                </InlineUIContainer>
                <Run Text="Hàng Duyệt"/>
            </TextBlock>

            <Grid Grid.Row="1" Margin="10,5,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="odppendingbutton" Grid.Column="0"
                    Margin="10,5,10,0"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odppendingbutton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ClockOutline"
                                                 Width="20" Height="20"
                                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Đang Duyệt"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </StackPanel>
                </Button>
                <Button x:Name="odpshippingbutton" Grid.Column="1"
                    Margin="10,5,10,0"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odpshippingbutton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Truck"
                                                 Width="20" Height="20"
                                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Đang Giao"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </StackPanel>
                </Button>
                <Button x:Name="odpsuccessbutton" Grid.Column="2"
                    Margin="10,5,10,0"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odpsuccessbutton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="CheckCircleOutline"
                                                 Width="20" Height="20"
                                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Đã Nhận"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </StackPanel>
                </Button>
                <Button x:Name="odpcanceledbutton" Grid.Column="3"
                    Margin="10,5,10,0"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odpcanceledbutton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="CloseCircleOutline"
                                                 Width="20" Height="20"
                                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Đã Hủy"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="#FFAFABAB">
            <Frame x:Name="MainScreenOQP">
                
            </Frame>
        </Border>

    </Grid>
</Page>
