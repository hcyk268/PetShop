<Page x:Class="Pet_Shop_Project.Views.OrderQueuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      mc:Ignorable="d" 
      Title="OrderQueuePage"
      Height="650" 
      Width="920"
      Background="#11000000">

    <Grid Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>


        <Grid x:Name="Header" 
                Grid.Row="0"
                Margin="0,0,0,0"
                Style="{StaticResource HeaderOderQueuePage}">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Style="{StaticResource TextHeaderOderQueuePage}" >
            Hàng Duyệt
            </TextBlock>

            <Grid Grid.Row="1" Margin="10,5,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="odppendingbutton" Grid.Column="0"
                    Margin="10,5,10,0"
                    Content="Đang Duyệt"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odppendingbutton_Click" />
                <Button x:Name="odpshippingbutton" Grid.Column="1"
                    Margin="10,5,10,0"
                    Content="Đang Giao"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odpshippingbutton_Click" />
                <Button x:Name="odpsuccessbutton" Grid.Column="2"
                    Margin="10,5,10,0"
                    Content="Đã Nhận"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odpsuccessbutton_Click" />
                <Button x:Name="odpcanceledbutton" Grid.Column="3"
                    Margin="10,5,10,0"
                    Content="Đã Hủy"
                    Style="{StaticResource ButtonQueuePageNavigation}" Click="odpcanceledbutton_Click" />
            </Grid>
        </Grid>

        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="#FFAFABAB">
            <Frame x:Name="MainScreenOQP">
                
            </Frame>
        </Border>

    </Grid>
</Page>
