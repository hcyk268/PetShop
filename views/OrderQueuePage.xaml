<Page x:Class="Pet_Shop_Project.Views.OrderQueuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="OrderQueuePage"
      d:DesignHeight="650" 
      d:DesignWidth="940"
      HorizontalAlignment="Stretch"
      Background="#F8FFFE">

    <Grid Margin="0,0,0,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="18"
                Background="#F5F5F5"
                materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2,0,0,8">
                    
                    <Button x:Name="BackButton"
                            Width="35" Height="35"
                            BorderThickness="0"
                            Background="White"
                            Cursor="Hand"
                            Click="BackButton_Click"
                            Margin="12,0,15,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Width="35" Height="35"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="18">          
                                      <materialDesign:PackIcon x:Name="icon"
                                         Kind="ArrowLeft"
                                         Width="22" Height="22"
                                         Foreground="#FFAD57"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFECECEC"/>
                                    </Trigger>

                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#FFAD56" Offset="0"/>
                                                    <GradientStop Color="#FFC281" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    
                        <StackPanel Margin="5,0,0,0">
                        <TextBlock Text="Các Đơn Hàng"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="#FFAD57"/>
                    </StackPanel>
                </StackPanel>

                <UniformGrid Grid.Row="1" Columns="4" Margin="0,10,0,0">

                    <Button x:Name="odppendingbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odppendingbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ClockOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đang Duyệt"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="odpshippingbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odpshippingbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Truck"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đang Giao"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="odpsuccessbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odpsuccessbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CheckCircleOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đã Nhận"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="odpcanceledbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odpcanceledbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CloseCircleOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đã Hủy"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="12,16,12,0"
                Background="White"
                CornerRadius="12"
                Padding="4"
                BorderBrush="#FFEDEDED"
                BorderThickness="1"
                materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Grid>
                <TextBlock x:Name="loadingIndicatorOQP"
                           Text="Đang tải..."
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                <Frame x:Name="MainScreenOQP"
                       Background="Transparent"
                       Visibility="Collapsed">
                </Frame>
            </Grid>
        </Border>

    </Grid>
</Page>
