<Page x:Class="Pet_Shop_Project.Views.OrderQueuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="OrderQueuePage"
      Height="650" 
      HorizontalAlignment="Stretch"
      Background="#FFF7F5">

    <Grid Margin="16,12,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="18"
                Background="White"
                CornerRadius="12"
                materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="2,0,0,8">
                    <Border Width="44" Height="44" CornerRadius="10"
                            Background="#FFF2D6"
                            VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ClipboardTextClockOutline"
                                                 Width="26" Height="26"
                                                 Foreground="#FF6B6B"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="12,2,0,0">
                        <TextBlock Text="Các Đơn Hàng"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   Foreground="#222"/>
                        <TextBlock Text="Chọn trạng thái để xem các đơn hàng"
                                   FontSize="14"
                                   Foreground="#6A6A6A"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <UniformGrid Grid.Row="1" Columns="4" Margin="0,4,0,0">

                    <Button x:Name="odppendingbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odppendingbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ClockOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đang Duyệt"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="odpshippingbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odpshippingbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Truck"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đang Giao"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="odpsuccessbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odpsuccessbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CheckCircleOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đã Nhận"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="odpcanceledbutton"
                            Margin="6,2"
                            Padding="12,10"
                            Style="{StaticResource ButtonQueuePageNavigation}"
                            Click="odpcanceledbutton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CloseCircleOutline"
                                                     Width="20" Height="20"
                                                     Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Đã Hủy"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="0,16,0,0"
                Background="White"
                CornerRadius="12"
                Padding="4"
                BorderBrush="#FFEDEDED"
                BorderThickness="1"
                materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Frame x:Name="MainScreenOQP"
                   Background="Transparent">
                
            </Frame>
        </Border>

    </Grid>
</Page>
