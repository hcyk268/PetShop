<Page x:Class="Pet_Shop_Project.Views.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="940"
      Background="#F5F5F5">

    <Grid>
        <!-- Background Decoration -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5F5F5" Offset="0"/>
                <GradientStop Color="#E8F4F8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Back Button -->
        <Button Style="{StaticResource MaterialDesignIconButton}"
                Width="40" Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,20,0,0"
                Click="BackButton_Click"
                ToolTip="Quay lại">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                   Width="24" Height="24"
                                   Foreground="#666"/>
        </Button>

        <!-- Login Card -->
        <Border Width="450" Height="550"
                Background="White"
                CornerRadius="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" 
                                ShadowDepth="0" 
                                Opacity="0.15"
                                Color="Black"/>
            </Border.Effect>

            <Grid Margin="50,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Row="0" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30">
                    <!-- Logo -->
                    <Border Width="80" Height="80" 
                           Background="Transparent"
                           CornerRadius="40"
                           Margin="0,0,0,5">
                        <Image Source="/Images/peach.png" 
                               Stretch="Uniform"/>
                    </Border>

                    <!-- FETCH Text -->
                    <TextBlock FontSize="36"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#F78272" Offset="0"/>
                                <GradientStop Color="#FFCC96" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <Run Text="NAME"/>
                    </TextBlock>

                    <!-- Subtitle -->
                    <TextBlock Text="Đăng nhập vào tài khoản"
                              FontSize="16"
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,-10"/>
                </StackPanel>

                <!-- Error Message -->
                <Border Grid.Row="1"
                        x:Name="ErrorMessage"
                        Background="#FFEBEE"
                        BorderBrush="#EF5350"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12,10"
                        Margin="0,0,0,15"
                        Visibility="Collapsed">
                    <TextBlock FontSize="14"
                              Foreground="#C62828"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Username -->
                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <TextBlock Text="Tên đăng nhập"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,8"/>

                    <Border Background="#F8F9FA"
                           BorderBrush="#DDD"
                           BorderThickness="1"
                           CornerRadius="10"
                           Height="45">
                        <Grid Margin="15,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                                   Kind="Account"
                                                   Width="22" Height="22"
                                                   Foreground="#999"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                            <TextBox Grid.Column="1"
                                    x:Name="UsernameTextBox"
                                    FontSize="15"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    VerticalAlignment="Center"
                                    Foreground="#333"
                                    KeyDown="UsernameTextBox_KeyDown"
                                    materialDesign:HintAssist.Hint="Nhập tên đăng nhập"
                                    materialDesign:HintAssist.Foreground="#999"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Password -->
                <StackPanel Grid.Row="3" Margin="0,0,0,10">
                    <TextBlock Text="Mật khẩu"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,8"/>

                    <Border Background="#F8F9FA"
                           BorderBrush="#DDD"
                           BorderThickness="1"
                           CornerRadius="10"
                           Height="45">
                        <Grid Margin="15,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                                   Kind="Lock"
                                                   Width="22" Height="22"
                                                   Foreground="#999"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                            <PasswordBox Grid.Column="1"
                                        x:Name="PasswordBox"
                                        FontSize="15"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        KeyDown="PasswordBox_KeyDown"
                                        materialDesign:HintAssist.Hint="Nhập mật khẩu"
                                        materialDesign:HintAssist.Foreground="#999"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Remember Me & Forgot Password -->
                <Grid Grid.Row="4" Margin="0,0,0,15">
                    <CheckBox x:Name="RememberMeCheckBox"
                             Content="Ghi nhớ tôi"
                             FontSize="14"
                             Foreground="#666"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"/>

                    <TextBlock HorizontalAlignment="Right"
                              VerticalAlignment="Center">
                        <Hyperlink Click="ForgotPasswordLink_Click"
                                  TextDecorations="None">
                            <TextBlock Text="Quên mật khẩu?"
                                      FontSize="14"
                                      Foreground="#F78272"/>
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <!-- Login Button -->
                <Button Grid.Row="5"
                       x:Name="LoginButton"
                       Height="50"
                       FontSize="16"
                       FontWeight="Bold"
                       Content="ĐĂNG NHẬP"
                       Click="LoginButton_Click"
                       Cursor="Hand"
                       Margin="0,0,0,20">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#F78272" Offset="0"/>
                                        <GradientStop Color="#FFCC96" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="12"
                                               Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="15" 
                                                                ShadowDepth="0" 
                                                                Opacity="0.3"
                                                                Color="#F78272"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Register Link -->
                <StackPanel Grid.Row="6" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Chưa có tài khoản? "
                              FontSize="14"
                              Foreground="#666"
                              VerticalAlignment="Center"/>
                    <TextBlock VerticalAlignment="Center">
                        <Hyperlink Click="RegisterLink_Click"
                                  TextDecorations="None">
                            <TextBlock Text="Đăng ký ngay"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#F78272"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>