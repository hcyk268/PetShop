<Page x:Class="Pet_Shop_Project.Views.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <StackPanel Margin="30">

        <Image Source="/Images/peach.png"
               Width="60"
               Height="60"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <TextBlock Text="Sign into your account" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,15,0,25"
                   Foreground="{DynamicResource MaterialDesignBody}"/>

        <TextBox x:Name="UsernameTextBox" materialDesign:HintAssist.Hint="👤 Username"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,15"/>

        <PasswordBox x:Name="PasswordBox" materialDesign:HintAssist.Hint="🔒 Password"
                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                     Margin="0,0,0,10"/>

        <Grid Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox Content="Remember me" FontSize="14"/>

            <Button Content="Sign up?"
                    Grid.Column="1"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="SignUp_Click"
                    FontStyle="Italic"
                    FontSize="14"/>
        </Grid>

        <Button Content="LOGIN"
                Height="45"
                FontSize="14"
                Style="{StaticResource GradientButtonStyle}"
                materialDesign:ButtonAssist.CornerRadius="5" />

    </StackPanel>
</Page>
