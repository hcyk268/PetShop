<Page x:Class="Pet_Shop_Project.Views.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="940"
      Title="Giỏ hàng">

    <Grid Background="White" Margin="20,0,20,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="30,30,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Giỏ hàng" 
                       FontSize="40" 
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       VerticalAlignment="Top"/>

            <!-- Delete all and select all buttons-->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                <Button Style="{StaticResource RoundButtonStyle}" 
                        ToolTip="Chọn tất cả"
                        Click="SelectAll_Click" 
                        Height="50" 
                        Width="50"
                        Margin="0,0,10,0">
                    <materialDesign:PackIcon x:Name="Select_All" 
                                             Kind="SelectAll" 
                                             Width="30" 
                                             Height="30"/>
                </Button>
                <Button Style="{StaticResource RoundButtonStyle}" 
                        ToolTip="Xóa đã chọn"
                        Click="DeleteSelected_Click" 
                        Height="50" 
                        Width="50">
                    <materialDesign:PackIcon x:Name="Delete_all" 
                                             Kind="DeleteOutline" 
                                             Width="30" 
                                             Height="30"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Cart Items ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Hidden"
                      Padding="30,0,30,120">
            <ItemsControl x:Name="CartItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="15"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,15,0"
                                          Cursor="Hand">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <Border Width="24" 
                                                                Height="24"
                                                                CornerRadius="12"
                                                                BorderThickness="2"
                                                                BorderBrush="#DDDDDD">

                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">

                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                                        <GradientStop Color="#ffc476" Offset="0"/>
                                                                                        <GradientStop Color="#ffa2a2" Offset="1"/>
                                                                                    </LinearGradientBrush>
                                                                                </Setter.Value>
                                                                            </Setter>

                                                                            <Setter Property="BorderBrush" Value="#ffa2a2"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="✓"
                                                                       Foreground="White"
                                                                       FontSize="14"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                
                                <!-- Product Image -->
                                <Border Grid.Column="1" 
                                        Width="80" Height="80"
                                        CornerRadius="8"
                                        Background="#F0F0F0"
                                        Margin="0,0,15,0">
                                    <Image Source="{Binding Image}" Stretch="UniformToFill"/>
                                </Border>

                                <!-- Product Details -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold"
                                               Foreground="#333333"
                                               Margin="0,0,0,6"/>

                                    <Border Background="#F5F5F5"
                                            BorderBrush="Transparent"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="10,4"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,0,6"
                                            Cursor="Hand">
                                        <TextBlock Text="{Binding Variant}" 
                                                   FontSize="13"
                                                   Foreground="#666666"/>
                                    </Border>

                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N0}đ}" 
                                               FontSize="16" 
                                               FontWeight="Medium"
                                               Foreground="#FF6B6B"
                                               Margin="0,0,0,10"/>

                                    <!-- Quantity Control -->
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource QtyButtonStyle}" 
                                                Content="−"
                                                Click="DecreaseQty_Click"
                                                Tag="{Binding}"/>
                                        <TextBlock Text="{Binding Quantity}" 
                                                   FontWeight="SemiBold"
                                                   Margin="15,0"
                                                   VerticalAlignment="Center"
                                                   MinWidth="30"
                                                   TextAlignment="Center"/>
                                        <Button Style="{StaticResource QtyButtonStyle}" 
                                                Content="+"
                                                Click="IncreaseQty_Click"
                                                Tag="{Binding}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Floating Summary Box (Bottom Right) -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="20,15"
                Margin="0,0,20,20"
                MinWidth="280"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel>
                <!-- Total Items -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tổng" 
                               Foreground="#666666" 
                               FontSize="14"/>
                    <TextBlock Grid.Column="1"
                               x:Name="TotalItemsText"
                               Text="0 sản phẩm" 
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="#333333"/>
                </Grid>

                <!-- Total Price -->
                <Border BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0" 
                        Padding="0,10,0,0"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Thành tiền" 
                                   Foreground="#666666" 
                                   FontSize="16"/>
                        <TextBlock Grid.Column="1"
                                   x:Name="TotalPriceText"
                                   Text="0đ" 
                                   FontWeight="SemiBold"
                                   FontSize="18"
                                   Foreground="#FF6B6B"/>
                    </Grid>
                </Border>

                <!-- Order Button -->
                <Button x:Name="Order" 
                        Style="{StaticResource GradientButtonStyle}"
                        Content="Mua hàng"
                        Width="238"
                        Height="45"
                        FontSize="18"
                        Click="PlaceOrder_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>