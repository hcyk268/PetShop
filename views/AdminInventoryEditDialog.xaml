<Window x:Class="Pet_Shop_Project.Views.AdminInventoryEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pet_Shop_Project.Views"
        mc:Ignorable="d"
        Title="Chỉnh sửa sản phẩm"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   x:Name="DialogTitle"
                   Text="Chỉnh sửa thông tin sản phẩm"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFAD57"
                   Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <!-- Product Selection (for new item) -->
                <StackPanel x:Name="ProductSelectionPanel" Visibility="Visible">
                    <Grid Margin="0,0,0,5">
                        <TextBlock Text="Sản phẩm *"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"
                               Foreground="#555"/>
                        <Button x:Name="CreateNewProductButton"
                                Style="{StaticResource GradientButtonStyle}"
                                Content="+ Thêm sản phẩm"
                                HorizontalAlignment="Left"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                FontSize="12"
                                Cursor="Hand"
                                Click="BtnCreateNewProduct_Click" Margin="316,0,0,0" Width="122">
                        </Button>
                    </Grid>
                    <ComboBox x:Name="ProductComboBox"
                              DisplayMemberPath="Name"
                              SelectedValuePath="ProductId"
                              Height="40"
                              Padding="10"
                              Margin="0,0,0,15"
                              SelectionChanged="ProductComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- Product Code (readonly for edit) -->
                <TextBlock Text="Mã sản phẩm"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <TextBox x:Name="TxtProductCode"
                         Height="40"
                         Padding="10"
                         IsReadOnly="True"
                         Background="#F5F5F5"
                         BorderBrush="#E0E0E0"
                         Margin="0,0,0,15"/>

                <!-- Product Name (readonly) -->
                <TextBlock Text="Tên sản phẩm"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <TextBox x:Name="TxtProductName"
                         Height="40"
                         Padding="10"
                         IsReadOnly="True"
                         Background="#F5F5F5"
                         BorderBrush="#E0E0E0"
                         Margin="0,0,0,15"/>

                <!-- Category -->
                <TextBlock Text="Danh mục *"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <ComboBox x:Name="CmbCategory"
                          Height="40"
                          Padding="10"
                          BorderBrush="#E0E0E0"
                          Margin="0,0,0,15">
                </ComboBox>

                <!-- Description -->
                <TextBlock Text="Mô tả"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <TextBox x:Name="TxtDescription"
                         Height="80"
                         Padding="10"
                         BorderBrush="#E0E0E0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Discount -->
                <TextBlock Text="Khuyến mãi (0-1) *"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <TextBox x:Name="TxtDiscount"
                         Height="40"
                         Padding="10"
                         BorderBrush="#E0E0E0"
                         Text="0"
                         Margin="0,0,0,15"/>

                <!-- Unit Price -->
                <TextBlock Text="Giá bán *"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <TextBox x:Name="TxtUnitPrice"
                         Height="40"
                         Padding="10"
                         BorderBrush="#E0E0E0"
                         Margin="0,0,0,15"/>

                <!-- Stock Quantity -->
                <TextBlock Text="Số lượng tồn kho *"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <TextBox x:Name="TxtStockQuantity"
                         Height="40"
                         Padding="10"
                         BorderBrush="#E0E0E0"
                         Margin="0,0,0,15"/>

                <!-- Picture URL -->
                <TextBlock Text="Đường dẫn hình ảnh"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="#555"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtPicture"
                             Grid.Column="0"
                             Height="40"
                             Padding="10"
                             BorderBrush="#E0E0E0"/>
                    <Button Grid.Column="1"
                            Content="Chọn file"
                            Height="40"
                            Width="100"
                            Margin="10,0,0,0"
                            Background="#FFB76C"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnSelectImage_Click"/>
                </Grid>

                <!-- Image Preview -->
                <Border x:Name="ImagePreviewBorder"
                        Height="150"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="0,0,0,15"
                        Visibility="Collapsed">
                    <Image x:Name="ImgPreview"
                           Stretch="Uniform"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Style="{StaticResource GradientButtonStyle}"
                    Background="#B7B7B7"
                    Content="Hủy"
                    Height="45"
                    Margin="0,0,225,0"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="BtnCancel_Click">
            </Button>

            <Button
                    Style="{StaticResource GradientButtonStyle}"
                    Content="Lưu"
                    Height="45"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="BtnSave_Click" 
                    Margin="250,0,0,0"/>
        </Grid>
    </Grid>
</Window>
