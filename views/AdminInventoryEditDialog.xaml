<Page x:Class="Pet_Shop_Project.Views.AdminInventoryEditDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="460"
      Title="Chỉnh sửa sản phẩm">

    <Grid>
        <!-- Main Content - REMOVED SHADOW -->
        <Border x:Name="MainContent"
                Background="White"
                CornerRadius="16"
                Padding="30"
                Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="#40000000" 
                              BlurRadius="20" 
                              ShadowDepth="0" 
                              Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock x:Name="DialogTitle"
                               Text="Thêm sản phẩm vào kho"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#FFAD57"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                </StackPanel>

                <!-- Form Fields -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Product Selection (for new item) -->
                        <StackPanel x:Name="ProductSelectionPanel" Visibility="Visible">
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Sản phẩm" 
                                           FontSize="15"
                                           FontWeight="SemiBold" 
                                           Foreground="#FFAD57"/>
                                <Button x:Name="CreateNewProductButton"
                                        Content="+ Thêm mới"
                                        HorizontalAlignment="Right"
                                        Foreground="#FFAD57"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8,4"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"
                                        Click="BtnCreateNewProduct_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                CornerRadius="8"
                                                                Padding="{TemplateBinding Padding}">
                                                            <TextBlock Text="{TemplateBinding Content}"
                                                                       FontSize="{TemplateBinding FontSize}"
                                                                       FontWeight="{TemplateBinding FontWeight}"
                                                                       Foreground="{TemplateBinding Foreground}"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#FFF5EE"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                            <Border Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="2"
                                    CornerRadius="10"
                                    Margin="0,0,0,20">
                                <ComboBox x:Name="ProductComboBox"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="ProductId"
                                          Height="42"
                                          Padding="12,0"
                                          BorderThickness="0"
                                          Background="Transparent"
                                          VerticalContentAlignment="Center"
                                          FontSize="14"
                                          SelectionChanged="ProductComboBox_SelectionChanged"/>
                            </Border>
                        </StackPanel>

                        <!-- Product Code -->
                        <TextBlock Text="Mã sản phẩm"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="#F5F5F5"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,20">
                            <TextBox x:Name="TxtProductCode"
                                     Height="42"
                                     Padding="12,0"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"/>
                        </Border>

                        <!-- Product Name -->
                        <TextBlock Text="Tên sản phẩm"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="#F5F5F5"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,20">
                            <TextBox x:Name="TxtProductName"
                                     Height="42"
                                     Padding="12,0"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"/>
                        </Border>

                        <!-- Category -->
                        <TextBlock Text="Danh mục"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,20">
                            <ComboBox x:Name="CmbCategory"
                                      Height="42"
                                      Padding="12,0"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      VerticalContentAlignment="Center"
                                      FontSize="14"/>
                        </Border>

                        <!-- Description -->
                        <TextBlock Text="Mô tả"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0,0,0,20">
                            <TextBox x:Name="TxtDescription"
                                     Height="80"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     FontSize="14"/>
                        </Border>

                        <!-- Discount -->
                        <TextBlock Text="Khuyến mãi (0-1)"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,20">
                            <TextBox x:Name="TxtDiscount"
                                     Height="42"
                                     Padding="12,0"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"
                                     Text="0"/>
                        </Border>

                        <!-- Unit Price -->
                        <TextBlock Text="Giá bán"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,20">
                            <TextBox x:Name="TxtUnitPrice"
                                     Height="42"
                                     Padding="12,0"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"/>
                        </Border>

                        <!-- Stock Quantity -->
                        <TextBlock Text="Số lượng tồn kho"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,20">
                            <TextBox x:Name="TxtStockQuantity"
                                     Height="42"
                                     Padding="12,0"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"/>
                        </Border>

                        <!-- Picture URL -->
                        <TextBlock Text="Hình ảnh sản phẩm"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFAD57"
                                   Margin="0,0,0,8"/>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtPicture"
                                         Grid.Column="0"
                                         Height="42"
                                         Padding="12,0"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         FontSize="14"/>
                                <Button Grid.Column="1"
                                        Content="Chọn file"
                                        Height="36"
                                        Width="90"
                                        Margin="0,0,3,0"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnSelectImage_Click">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FFAD56" Offset="0"/>
                                            <GradientStop Color="#FFC281" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <TextBlock Text="{TemplateBinding Content}"
                                                           FontSize="{TemplateBinding FontSize}"
                                                           FontWeight="{TemplateBinding FontWeight}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Image Preview -->
                        <Border x:Name="ImagePreviewBorder"
                                Height="150"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="10"
                                Margin="0,0,0,15"
                                Visibility="Collapsed">
                            <Image x:Name="ImgPreview"
                                   Stretch="Uniform"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Action Buttons -->
                <Grid Grid.Row="2" Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cancel Button -->
                    <Button Grid.Column="0"
                            Content="Hủy"
                            Height="44"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Foreground="#666666"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="2"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            Click="BtnCancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="12">
                                    <TextBlock Text="{TemplateBinding Content}"
                                               FontSize="{TemplateBinding FontSize}"
                                               FontWeight="{TemplateBinding FontWeight}"
                                               Foreground="{TemplateBinding Foreground}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Save Button -->
                    <Button Grid.Column="1"
                            Content="Lưu"
                            Height="44"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="8,0,0,0"
                            Click="BtnSave_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFAD56" Offset="0"/>
                                <GradientStop Color="#FFC281" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="12">
                                    <TextBlock Text="{TemplateBinding Content}"
                                               FontSize="{TemplateBinding FontSize}"
                                               FontWeight="{TemplateBinding FontWeight}"
                                               Foreground="{TemplateBinding Foreground}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Overlay for Product Edit Dialog - REMOVED DARK BACKGROUND -->
        <Grid x:Name="OverlayContainer" 
              Visibility="Collapsed"
              Background="Transparent">
            <Frame x:Name="OverlayFrame"
                   NavigationUIVisibility="Hidden"
                   Width="460"
                   Height="600"
                   Background="Transparent"/>
        </Grid>
    </Grid>
</Page>