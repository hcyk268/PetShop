<Page x:Class="Pet_Shop_Project.Views.AdminProductEditDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" 
      d:DesignWidth="500"
      Title="Thêm sản phẩm mới">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
               x:Name="DialogTitle"
               Text="Thêm sản phẩm mới"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#FFAD57"
               Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <!-- Product Name -->
                <TextBlock Text="Tên sản phẩm *"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="#555"/>
                <TextBox x:Name="TxtProductName"
                     Height="40"
                     Padding="10"
                     BorderBrush="#E0E0E0"
                     Margin="0,0,0,15"/>

                <!-- Category -->
                <TextBlock Text="Danh mục *"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="#555"/>
				<ComboBox x:Name="CmbCategory"
                      Height="40"
                      Padding="10"
                      BorderBrush="#E0E0E0"
                      Margin="0,0,0,15">
					<ComboBoxItem Content="Thức ăn"/>
					<ComboBoxItem Content="Đồ chơi"/>
					<ComboBoxItem Content="Dụng cụ"/>
					<ComboBoxItem Content="Thiết bị"/>
				</ComboBox>

                <!-- Description -->
                <TextBlock Text="Mô tả"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="#555"/>
                <TextBox x:Name="TxtDescription"
                     Height="80"
                     Padding="10"
                     BorderBrush="#E0E0E0"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,15"/>

                <!-- Discount -->
                <TextBlock Text="Khuyến mãi (0-1) *"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="#555"/>
                <TextBox x:Name="TxtDiscount"
                     Height="40"
                     Padding="10"
                     BorderBrush="#E0E0E0"
                     Text="0"
                     Margin="0,0,0,15"/>

                <!-- Unit Price -->
                <TextBlock Text="Giá bán *"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="#555"/>
                <TextBox x:Name="TxtUnitPrice"
                     Height="40"
                     Padding="10"
                     BorderBrush="#E0E0E0"
                     Margin="0,0,0,15"/>

                <!-- Unit In Stock -->
                <TextBlock Text="Số lượng tồn kho *"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="#555"/>
                <TextBox x:Name="TxtUnitInStock"
                     Height="40"
                     Padding="10"
                     BorderBrush="#E0E0E0"
                     Margin="0,0,0,15"/>

                <!-- Picture URL -->
                <TextBlock Text="Đường dẫn hình ảnh"
                       FontWeight="SemiBold"
                       Margin="0,0,0,5"
                       Foreground="#555"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtPicture"
                         Grid.Column="0"
                         Height="40"
                         Padding="10"
                         BorderBrush="#E0E0E0"/>
                    <Button Grid.Column="1"
                        Content="Chọn file"
                        Height="40"
                        Width="100"
                        Margin="10,0,0,0"
                        Background="#FFAD57"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnSelectImage_Click"/>
                </Grid>

                <!-- Image Preview -->
                <Border x:Name="ImagePreviewBorder"
                    Height="150"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15"
                    Visibility="Collapsed">
                    <Image x:Name="ImgPreview"
                       Stretch="Uniform"/>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                Style="{StaticResource GradientButtonStyle}"
                Background="#B7B7B7"
                Content="Hủy"
                Height="45"
                Margin="0,0,10,0"
                BorderThickness="0"
                FontSize="16"
                FontWeight="SemiBold"
                Cursor="Hand"
                Click="BtnCancel_Click"/>

            <Button Grid.Column="1"
                Style="{StaticResource GradientButtonStyle}"
                Content="Lưu"
                Height="45"
                Margin="10,0,0,0"
                Foreground="White"
                BorderThickness="0"
                FontSize="16"
                FontWeight="SemiBold"
                Cursor="Hand"
                Click="BtnSave_Click"/>
        </Grid>
    </Grid>
</Page>
