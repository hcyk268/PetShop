<Page x:Class="Pet_Shop_Project.Views.DashBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      d:DesignHeight="650" d:DesignWidth="940"
      mc:Ignorable="d"
      Background="#F5F5F5">

    <Grid Margin="25">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- ======================= LEFT SIDE ========================= -->
        <StackPanel Grid.Column="0" Margin="10 0 40 0">

            <!-- Greeting -->
            <TextBlock Text="{Binding UserGreeting}"
                       FontSize="30"
                       FontWeight="Bold"
                       Margin="0 0 0 0"
                       Foreground="#333">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#FFE0B2"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Stats Row -->
            <UniformGrid Rows="1" Columns="4" Margin="0 0 0 0">
                <!-- Card Template -->
                <Border CornerRadius="15" Background="White" Margin="4" Padding="20"
                        BorderBrush="#FF6B6B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Khách hàng" FontSize="12" Margin="0 0 0 5"/>
                        <TextBlock Text="{Binding TotalUsers}" FontSize="15" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="4" Padding="20"
                        BorderBrush="#FF6B6B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Sản phẩm" FontSize="12" Margin="0 0 0 5"/>
                        <TextBlock Text="{Binding TotalProducts}" FontSize="15" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="4" Padding="20"
                        BorderBrush="#FF6B6B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Đơn thành công" FontSize="12" Margin="0 0 0 5"/>
                        <TextBlock Text="{Binding TotalOrders}" FontSize="15" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="4" Padding="20"
                        BorderBrush="#FF6B6B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Doanh thu (VND)" FontSize="12"/>
                        <TextBlock Text="{Binding TotalRevenue}" FontSize="15" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Chart với LiveCharts -->
            <Border Background="#F8FFFE" CornerRadius="15"
                    Padding="20" Margin="0 15 0 15"
                    BorderBrush="#FF6B6B" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Doanh thu trong tuần"
                               FontSize="20" FontWeight="SemiBold" Margin="0 0 0 5"/>

                    <TextBlock Text="(7 ngày gần nhất)"
                               FontSize="12" Foreground="#666" Margin="0 0 0 10"/>

                    <!-- LiveCharts CartesianChart -->
                    <lvc:CartesianChart Series="{Binding WeeklyRevenueSeries}" 
                                        Height="220"
                                        LegendLocation="Top"
                                        Margin="0 5 0 0">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Ngày trong tuần" 
                                      Labels="{Binding WeekLabels}" 
                                      FontSize="11"
                                      Foreground="#333"
                                      >
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" StrokeThickness="1" Stroke="#E0E0E0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Doanh thu (VND)" 
                                      LabelFormatter="{Binding YFormatter}" 
                                      FontSize="11"
                                      Foreground="#333"
                                      MinValue="0">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="{Binding YAxisStep}" 
                                                   StrokeThickness="1" 
                                                   Stroke="#E0E0E0" 
                                                   StrokeDashArray="2"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>

                        <!-- DataTooltip để hiển thị giá trị khi hover -->
                        <lvc:CartesianChart.DataTooltip>
                            <lvc:DefaultTooltip Background="#FF6B6B" 
                                                Foreground="White" 
                                                BorderBrush="#FF6B6B" 
                                                BorderThickness="1"
                                                CornerRadius="5"/>
                        </lvc:CartesianChart.DataTooltip>
                    </lvc:CartesianChart>
                </StackPanel>
            </Border>

            <!-- Best / Worst Sellers -->
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Best Seller -->
                <Border CornerRadius="15" Background="White" Padding="20" Margin="0,10,10,10"
                        BorderBrush="#FF6B6B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Best Sellers" FontSize="20" FontWeight="Bold"/>
                        <ItemsControl ItemsSource="{Binding BestSellers}"/>
                    </StackPanel>
                </Border>

                <!-- Worst Seller -->
                <Border Grid.Column="1" CornerRadius="15" Background="White" Padding="20" Margin="10,10,0,10"
                        BorderBrush="#FF6B6B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Worst Sellers" FontSize="20" FontWeight="Bold"/>
                        <ItemsControl ItemsSource="{Binding WorstSellers}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>

        <!-- ======================= RIGHT SIDE ========================= -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Admin Info với Avatar Image -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                <!-- Avatar hình tròn -->
                <Border Width="55" Height="55" 
                        CornerRadius="27.5"
                        BorderThickness="2">
                    <Border.Clip>
                        <EllipseGeometry Center="27.5,27.5" RadiusX="27.5" RadiusY="27.5"/>
                    </Border.Clip>
                    <Image Source="/Images/bear.jpg"  
                           Stretch="Uniform"/>
                </Border>

                <StackPanel Margin="10 0">
                    <TextBlock Text="Admin" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="{Binding UserName}" FontSize="14" Foreground="#666"/>
                </StackPanel>
            </StackPanel>

            <!-- Setting Area với Background Image -->
            <Border CornerRadius="20" Height="180" Margin="0 0 0 10"
                    BorderBrush="#FF6B6B" BorderThickness="1">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/conmeo.jpg" 
                                Stretch="UniformToFill"/>
                </Border.Background>
            </Border>

            <!-- Calendar - Auto Size với Viewbox -->
            <Border CornerRadius="0" 
                    Padding="5" 
                    BorderBrush="#FF6B6B" 
                    BorderThickness="1" 
                    Background="#F8FFFE" Height="329">
                <Viewbox Stretch="Uniform" Margin="0,-4,0,0" Width="228">
                    <Calendar HorizontalAlignment="Center" 
                             VerticalAlignment="Center" Height="385" Width="268" />
                </Viewbox>
            </Border>

        </StackPanel>

    </Grid>
</Page>