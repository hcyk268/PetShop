<Page x:Class="Pet_Shop_Project.Views.DashBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Pet_Shop_Project.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      d:DesignHeight="650" d:DesignWidth="940"
      mc:Ignorable="d"
      Background="#FFF8F8">
    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#D32F2F"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFCC96"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>
    </Page.Resources>

    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10 0 40 0">

            <TextBlock Text="{Binding UserGreeting}"
                       FontSize="30"
                       FontWeight="Bold"
                       Margin="0 0 0 10"
                       Foreground="Black">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#AAAAAA" Opacity="0.4"/>
                </TextBlock.Effect>
            </TextBlock>

            <UniformGrid Rows="1" Columns="4" Margin="0 5 0 10">
                <Border CornerRadius="15" Background="White" Margin="4" Padding="6">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="AccountGroup" Width="30" Height="30" VerticalAlignment="Center" 
                                           Foreground="{StaticResource AccentBrush}" Margin="0 0 10 0"/>
                        <StackPanel>
                            <TextBlock Text="Khách hàng" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalUsers}" FontSize="15" FontWeight="ExtraBold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="4" Padding="6">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="BasketOutline" Width="30" Height="30" VerticalAlignment="Center" 
                                           Foreground="{StaticResource AccentBrush}" Margin="0 0 10 0"/>
                        <StackPanel>
                            <TextBlock Text="Sản phẩm" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalProducts}"  FontSize="15" FontWeight="Bold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="4" Padding="6">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="TruckCheck" Width="30" Height="30" VerticalAlignment="Center" 
                                           Foreground="{StaticResource AccentBrush}" Margin="0 0 10 0"/>
                        <StackPanel>
                            <TextBlock Text="Đơn thành công" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalOrders}"  FontSize="15" FontWeight="Bold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="4" Padding="6">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="CashMultiple" Width="30" Height="30" VerticalAlignment="Center" 
                                           Foreground="{StaticResource AccentBrush}" Margin="0 0 10 0"/>
                        <StackPanel>
                            <TextBlock Text="Doanh thu" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalRevenue}"  FontSize="15" FontWeight="Bold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Background="White" CornerRadius="15"
                    Padding="20" Margin="0 15 0 15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#AAAAAA" Opacity="0.15"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Doanh thu trong tuần"
                               FontSize="20" FontWeight="SemiBold" Margin="0 0 0 5" Foreground="Black"/>

                    <TextBlock Text="(7 ngày gần nhất)"
                               FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Margin="0 0 0 10"/>

                    <lvc:CartesianChart Series="{Binding WeeklyRevenueSeries}" 
                                        Height="220"
                                        LegendLocation="Top"
                                        Margin="0 5 0 0">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Ngày trong tuần" 
                                      Labels="{Binding WeekLabels}" 
                                      FontSize="11"
                                      Foreground="{StaticResource SecondaryTextBrush}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" StrokeThickness="1" Stroke="#F0F0F0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Doanh thu (VND)" 
                                      LabelFormatter="{Binding YFormatter}" 
                                      FontSize="11"
                                      Foreground="{StaticResource SecondaryTextBrush}"
                                      MinValue="0">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="{Binding YAxisStep}" 
                                                   StrokeThickness="1" 
                                                   Stroke="#E0E0E0" 
                                                   StrokeDashArray="2"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>

                        <lvc:CartesianChart.DataTooltip>
                            <lvc:DefaultTooltip Background="{StaticResource PrimaryBrush}" 
                                                Foreground="White" 
                                                BorderBrush="{StaticResource PrimaryBrush}" 
                                                BorderThickness="1"
                                                CornerRadius="5"/>
                        </lvc:CartesianChart.DataTooltip>
                    </lvc:CartesianChart>
                </StackPanel>
            </Border>

            <!-- Best & Worst Sellers -->
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="15" Background="White" Padding="18" Margin="0,0,8,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <material:PackIcon Kind="TrendingUp" 
                                                   Width="22" Height="22" 
                                                   Foreground="{StaticResource PrimaryBrush}" 
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Best Sellers" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding BestSellers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                                   FontSize="12" 
                                                   Foreground="#333333"
                                                   Margin="0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" CornerRadius="15" Background="White" Padding="18" Margin="8,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <material:PackIcon Kind="TrendingDown" 
                                                   Width="22" Height="22" 
                                                   Foreground="{StaticResource PrimaryBrush}" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Worst Sellers" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding WorstSellers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                                   FontSize="12" 
                                                   Foreground="#333333"
                                                   Margin="0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">
            <Border CornerRadius="15" Background="White" Padding="15" Margin="0 0 0 10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="55" Height="55" 
                            CornerRadius="27.5"
                            BorderThickness="2"
                            BorderBrush="{StaticResource PrimaryBrush}">
                        <Border.Clip>
                            <EllipseGeometry Center="27.5,27.5" RadiusX="27.5" RadiusY="27.5"/>
                        </Border.Clip>
                        <Image Source="/Images/bear.jpg" 
                               Stretch="Uniform" Margin="-2,-2,-2,-2"/>
                    </Border>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Admin" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Text="{Binding UserName}" FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>


            <Border CornerRadius="20" Height="180" Margin="0 0 0 10">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/conmeo.jpg" 
                                Stretch="UniformToFill"/>
                </Border.Background>
            </Border>

            <Border CornerRadius="15" 
                    Padding="5" 
                    BorderThickness="1" 
                    BorderBrush="#F0F0F0"
                    Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                </Border.Effect>
                <Viewbox Stretch="Uniform" Margin="0,-4,0,0" Width="228" Height="290">
                    <Calendar HorizontalAlignment="Center" 
                              VerticalAlignment="Center" Width="270" />
                </Viewbox>
            </Border>

        </StackPanel>

    </Grid>
</Page>