<Page x:Class="Pet_Shop_Project.Views.DashBoard"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:local="clr-namespace:Pet_Shop_Project.Views"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
          xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
          d:DesignHeight="650" d:DesignWidth="940"
          mc:Ignorable="d"
          Background="#FFF8F8">
    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#D32F2F"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FFCC96"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- PHẦN BÊN TRÁI -->
        <StackPanel Grid.Column="0" Margin="0,0,15,0">

            <!-- Greeting -->
            <TextBlock Text="{Binding UserGreeting}"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,15"
                           Foreground="Black">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#AAAAAA" Opacity="0.4"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- 4 Thẻ thống kê -->
            <UniformGrid Rows="1" Columns="4" Margin="0,0,0,15">
                <Border CornerRadius="15" Background="White" Margin="0,0,8,0" Padding="15,12">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="AccountGroup" Width="32" Height="32" 
                                               VerticalAlignment="Center" 
                                               Foreground="{StaticResource AccentBrush}" 
                                               Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Khách hàng" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalUsers}" FontSize="16" FontWeight="Bold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="8,0,8,0" Padding="15,12">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="BasketOutline" Width="32" Height="32" 
                                               VerticalAlignment="Center" 
                                               Foreground="{StaticResource AccentBrush}" 
                                               Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Sản phẩm" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalProducts}" FontSize="16" FontWeight="Bold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="8,0,8,0" Padding="15,12">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="TruckCheck" Width="32" Height="32" 
                                               VerticalAlignment="Center" 
                                               Foreground="{StaticResource AccentBrush}" 
                                               Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Đơn thành công" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalOrders}" FontSize="16" FontWeight="Bold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" Background="White" Margin="8,0,0,0" Padding="15,12">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <material:PackIcon Kind="CashMultiple" Width="32" Height="32" 
                                               VerticalAlignment="Center" 
                                               Foreground="{StaticResource AccentBrush}" 
                                               Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Doanh thu" FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding TotalRevenue}" FontSize="16" FontWeight="Bold" Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Biểu đồ doanh thu -->
            <Border Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#AAAAAA" Opacity="0.15"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Doanh thu trong 30 ngày"
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,3" 
                                   Foreground="Black"/>

                    <TextBlock Text="Theo dõi xu hướng doanh thu hàng ngày"
                                   FontSize="11" 
                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                   Margin="0,0,0,15"/>

                    <lvc:CartesianChart Series="{Binding WeeklyRevenueSeries}" 
                                            Height="240"
                                            LegendLocation="Top"
                                            Margin="0,5,0,5">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Ngày trong tháng" 
                                          Labels="{Binding WeekLabels}" 
                                          FontSize="9"
                                          Foreground="{StaticResource SecondaryTextBrush}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" StrokeThickness="1" Stroke="#F0F0F0"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Doanh thu (VND)" 
                                          LabelFormatter="{Binding YFormatter}" 
                                          FontSize="10"
                                          Foreground="{StaticResource SecondaryTextBrush}"
                                          MinValue="0">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="{Binding YAxisStep}" 
                                                       StrokeThickness="1" 
                                                       Stroke="#E0E0E0" 
                                                       StrokeDashArray="2"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>

                        <lvc:CartesianChart.DataTooltip>
                            <lvc:DefaultTooltip Background="{StaticResource PrimaryBrush}" 
                                                    Foreground="White" 
                                                    BorderBrush="{StaticResource PrimaryBrush}" 
                                                    BorderThickness="1"
                                                    CornerRadius="5"/>
                        </lvc:CartesianChart.DataTooltip>
                    </lvc:CartesianChart>
                </StackPanel>
            </Border>

            <!-- Best & Worst Sellers -->
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="15" Background="White" Padding="18" Margin="0,0,8,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <material:PackIcon Kind="TrendingUp" 
                                                   Width="22" Height="22" 
                                                   Foreground="{StaticResource PrimaryBrush}" 
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Best Sellers" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding BestSellers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                                   FontSize="12" 
                                                   Foreground="#333333"
                                                   Margin="0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" CornerRadius="15" Background="White" Padding="18" Margin="8,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <material:PackIcon Kind="TrendingDown" 
                                                   Width="22" Height="22" 
                                                   Foreground="{StaticResource PrimaryBrush}" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Worst Sellers" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryBrush}"
                                           VerticalAlignment="Center"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding WorstSellers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                                   FontSize="12" 
                                                   Foreground="#333333"
                                                   Margin="0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>

        <!-- PHẦN BÊN PHẢI -->
        <StackPanel Grid.Column="1" Margin="15,0,0,0">

            <!-- Admin Profile -->
            <Border CornerRadius="15" Background="White" Padding="15" Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="55" Height="55" 
                                CornerRadius="25"
                                BorderThickness="2"
                                BorderBrush="{StaticResource PrimaryBrush}">
                        <Border.Clip>
                            <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                        </Border.Clip>
                        <Image Source="/Images/bear.jpg" Stretch="UniformToFill" Margin="-6,-2,0,-2"/>
                    </Border>

                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="Admin" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Text="{Binding UserName}" 
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Hình ảnh trang trí -->
            <Border CornerRadius="15" Height="160" Margin="0,0,0,15">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/conmeo.jpg" Stretch="UniformToFill"/>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                </Border.Effect>
            </Border>

            <!-- Calendar -->
            <Border CornerRadius="15" 
                        Padding="10" 
                        BorderThickness="1" 
                        BorderBrush="#F0F0F0"
                        Background="White" Height="356">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#AAAAAA" Opacity="0.2"/>
                </Border.Effect>
                <Calendar HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Background="Transparent"
                              BorderThickness="0"/>
            </Border>

        </StackPanel>

    </Grid>
</Page>