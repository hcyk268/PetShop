<Window x:Class="Pet_Shop_Project.Views.AddEditUserDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thêm/Sửa Người Dùng" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Border Background="White"
           CornerRadius="15"
           Margin="15">
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                     Padding="30">
            <StackPanel>
                <!-- Title -->
                <TextBlock x:Name="DialogTitle"
                          Text="THÊM NGƯỜI DÙNG MỚI"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="#ffad57"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Full Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Họ và tên *"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,6"/>
                    <TextBox x:Name="FullNameTextBox"
                            FontSize="14"
                            Padding="12"
                            BorderBrush="#DDD"
                            BorderThickness="1"/>
                </StackPanel>

                <!-- Username -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Tên đăng nhập *"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,6"/>
                    <TextBox x:Name="UsernameTextBox"
                            FontSize="14"
                            Padding="12"
                            BorderBrush="#DDD"
                            BorderThickness="1"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Email *"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,6"/>
                    <TextBox x:Name="EmailTextBox"
                            FontSize="14"
                            Padding="12"
                            BorderBrush="#DDD"
                            BorderThickness="1"/>
                </StackPanel>

                <!-- Phone -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Số điện thoại"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,6"/>
                    <TextBox x:Name="PhoneTextBox"
                            FontSize="14"
                            Padding="12"
                            BorderBrush="#DDD"
                            BorderThickness="1"/>
                </StackPanel>

                <!-- Address -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Địa chỉ"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,6"/>
                    <TextBox x:Name="AddressTextBox"
                            FontSize="14"
                            Padding="12"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            Height="60"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"/>
                </StackPanel>

                <!-- Password (only for Add) -->
                <StackPanel x:Name="PasswordPanel" Margin="0,0,0,15">
                    <TextBlock Text="Mật khẩu *"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,6"/>
                    <PasswordBox x:Name="PasswordBox"
                                FontSize="14"
                                Padding="12"
                                BorderBrush="#DDD"
                                BorderThickness="1"/>
                </StackPanel>

                <!-- Role -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Vai trò *"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#333"
                              Margin="0,0,0,6"/>
                    <ComboBox x:Name="RoleComboBox"
                             FontSize="14"
                             Padding="12"
                             BorderBrush="#DDD"
                             BorderThickness="1">
                        <ComboBoxItem Content="User" IsSelected="True"/>
                        <ComboBoxItem Content="Admin"/>
                    </ComboBox>
                </StackPanel>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cancel Button -->
                    <Button Grid.Column="0"
                           Style="{StaticResource GradientButtonStyle}"
                           Content="Hủy"
                           Height="45"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Background="#E0E0E0"
                           Foreground="#666"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="CancelButton_Click">
                    </Button>

                    <!-- Save Button -->
                    <Button Grid.Column="2"
                           Style="{StaticResource GradientButtonStyle}"
                           Content="Lưu"
                           Height="45"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="SaveButton_Click">
                    </Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>