<Window x:Class="Pet_Shop_Project.Views.DeleteUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Xác nhận xóa" 
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="White"
            CornerRadius="16"
            Padding="30"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#40000000" 
                              BlurRadius="20" 
                              ShadowDepth="0" 
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <!-- Icon -->
                <Border Background="#FFF3E0"
                        CornerRadius="50"
                        Width="80" Height="80"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="AlertCircle"
                                             Width="50" Height="50"
                                             Foreground="#FFAD57"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Xác nhận xóa người dùng"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#FFAD57"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="Hành động này không thể hoàn tác"
                               FontSize="15"
                               Foreground="#666"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>

                    <!-- User Info Card -->
                    <Border Background="#FFF6EE"
                            BorderBrush="#FFAD57"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="Account"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#FFAD57"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,10,0"/>
                                <TextBlock Text="Họ và tên: " 
                                           FontWeight="SemiBold" 
                                           FontSize="14"
                                           Foreground="#333"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="UserNameRun" 
                                           FontSize="14"
                                           Foreground="#666"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Email"
                                                         Width="20"
                                                         Height="20"
                                                         Foreground="#FFAD57"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,10,0"/>
                                <TextBlock Text="Email: " 
                                           FontWeight="SemiBold" 
                                           FontSize="14"
                                           Foreground="#333"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="UserEmailRun" 
                                           FontSize="14"
                                           Foreground="#666"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Warning -->
                    <Border Background="#FFF3E0"
                            BorderBrush="#FFB74D"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircleOutline"
                                                     Width="20"
                                                     Height="20"
                                                     Foreground="#FF9800"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Dữ liệu sẽ bị xóa vĩnh viễn và không thể khôi phục"
                                       FontSize="13"
                                       Foreground="#F57C00"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="0"
                        Content="Hủy"
                        Height="44"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="#666666"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="2"
                        Cursor="Hand"
                        Margin="0,0,8,0"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12">
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Delete Button -->
                <Button Grid.Column="1"
                        Height="44"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="8,0,0,0"
                        Click="DeleteButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#DC3545" Offset="0"/>
                            <GradientStop Color="#E05565" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="12">
                                <TextBlock Text="Xóa"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="15" Opacity="0.3" Color="#DC3545"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#C82333" Offset="0"/>
                                                <GradientStop Color="#D04555" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>